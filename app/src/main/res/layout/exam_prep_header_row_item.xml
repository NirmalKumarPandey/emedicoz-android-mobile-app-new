<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parentLL"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/study_single_itemLL"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp70"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp10"
            android:paddingTop="@dimen/dp15"
            android:paddingRight="@dimen/dp10"
            android:paddingBottom="@dimen/dp15"
            android:background="@color/course_bg_color">

            <RelativeLayout
                android:id="@+id/imageRL"
                android:layout_width="@dimen/dp35"
                android:layout_height="@dimen/dp35"
                android:visibility="visible">

                <ImageView
                    android:id="@+id/emojiSmileCIV"
                    android:layout_width="@dimen/dp35"
                    android:layout_height="@dimen/dp35"
                    android:scaleType="centerCrop"
                    android:src="@drawable/smile_imoji"
                    android:tint="@color/red" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/mainRelativeLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp12"
                android:layout_toRightOf="@+id/imageRL"
                android:gravity="center_vertical">

                <RelativeLayout
                    android:id="@+id/relativePrepTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/examPrepTitleTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-medium"
                        android:gravity="center_vertical"
                        android:text="Physiology Test and Discussion"
                        android:textColor="@color/expandable_list_parent_item_text_color"
                        android:textSize="@dimen/sp14"
                        android:textStyle="normal" />

                    <ImageView
                        android:id="@+id/expandItemArrow"
                        android:layout_width="@dimen/dp15"
                        android:layout_height="@dimen/dp10"
                        android:layout_marginTop="@dimen/dp3"
                        android:layout_alignParentEnd="true"
                        android:src="@mipmap/down_arrow" />

                </RelativeLayout>

            </RelativeLayout>


        </RelativeLayout>

        <View
            android:id="@+id/lineView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp1"
            android:background="#838383" />
    </LinearLayout>
</RelativeLayout>
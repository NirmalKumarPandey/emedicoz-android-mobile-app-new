<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".feeds.activity.AppSettingActivity">

    <include layout="@layout/header_layout"/>

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp5"
                android:layout_marginTop="@dimen/dp5"
                android:layout_marginRight="@dimen/dp5"
                android:foreground="?android:attr/selectableItemBackground">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp40"
                    android:background="@color/left_panel_background_color">

                    <Switch
                        android:id="@+id/likeswitch"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/normal_button_padding_left_right"
                        android:shadowColor="@color/blue"
                        android:text="Notification on new Like"
                        android:textColor="@color/dullBlack"
                        android:textSize="@dimen/post_text_size" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp5"
                android:layout_marginTop="@dimen/dp5"
                android:layout_marginRight="@dimen/dp5"
                android:foreground="?android:attr/selectableItemBackground">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp40"
                    android:background="@color/left_panel_background_color">

                    <Switch
                        android:id="@+id/commentswitch"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/normal_button_padding_left_right"
                        android:shadowColor="@color/blue"
                        android:text="Notification on new Comment"
                        android:textColor="@color/dullBlack"
                        android:textSize="@dimen/post_text_size" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp5"
                android:layout_marginTop="@dimen/dp5"
                android:layout_marginRight="@dimen/dp5"
                android:foreground="?android:attr/selectableItemBackground">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp40"
                    android:background="@color/left_panel_background_color">

                    <Switch
                        android:id="@+id/tagswitch"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/normal_button_padding_left_right"
                        android:shadowColor="@color/blue"
                        android:text="Notification on new Tag"
                        android:textColor="@color/dullBlack"
                        android:textSize="@dimen/post_text_size" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp5"
                android:layout_marginTop="@dimen/dp5"
                android:layout_marginRight="@dimen/dp5"
                android:foreground="?android:attr/selectableItemBackground">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp40"
                    android:background="@color/left_panel_background_color">

                    <Switch
                        android:id="@+id/adminswitch"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/normal_button_padding_left_right"
                        android:shadowColor="@color/blue"
                        android:text="Notification from emedicoz"
                        android:textColor="@color/dullBlack"
                        android:textSize="@dimen/post_text_size" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp5"
                android:layout_marginTop="@dimen/dp5"
                android:layout_marginRight="@dimen/dp5"
                android:foreground="?android:attr/selectableItemBackground"
                android:visibility="gone">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp40"
                    android:background="@color/white">

                    <Switch
                        android:id="@+id/liveswitch"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/normal_button_padding_left_right"
                        android:shadowColor="@color/blue"
                        android:text="Notification for Live Stream"
                        android:textColor="@color/dullBlack"
                        android:textSize="@dimen/heading_text_size" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp5"
                android:layout_marginTop="@dimen/dp5"
                android:layout_marginRight="@dimen/dp5"
                android:foreground="?android:attr/selectableItemBackground">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp40"
                    android:background="@color/left_panel_background_color">

                    <Switch
                        android:id="@+id/followingswitch"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/normal_button_padding_left_right"
                        android:shadowColor="@color/blue"
                        android:text="Notification on new Following"
                        android:textColor="@color/dullBlack"
                        android:textSize="@dimen/post_text_size" />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/termsCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/notificationCard"
                android:layout_marginLeft="@dimen/dp5"
                android:layout_marginTop="@dimen/dp5"
                android:layout_marginRight="@dimen/dp5">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp40"
                    android:background="@color/left_panel_background_color">

                    <TextView
                        android:id="@+id/termsText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/normal_button_padding_left_right"
                        android:drawableRight="@mipmap/forward_black"
                        android:gravity="center_vertical"
                        android:paddingRight="@dimen/dp10"
                        android:text="@string/termscond"
                        android:textColor="@color/dullBlack"
                        android:textSize="@dimen/post_text_size" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/privacyCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/termsCard"
                android:layout_marginLeft="@dimen/dp5"
                android:layout_marginTop="@dimen/dp5"
                android:layout_marginRight="@dimen/dp5">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp40"
                    android:background="@color/left_panel_background_color">

                    <TextView
                        android:id="@+id/privacyText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/normal_button_padding_left_right"
                        android:drawableRight="@mipmap/forward_black"
                        android:gravity="center_vertical"
                        android:paddingRight="@dimen/dp10"
                        android:text="@string/privacy"
                        android:textColor="@color/dullBlack"
                        android:textSize="@dimen/post_text_size" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/resetContentCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/privacyCard"
                android:layout_marginLeft="@dimen/dp5"
                android:layout_marginTop="@dimen/dp5"
                android:layout_marginRight="@dimen/dp5">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp40"
                    android:background="@color/left_panel_background_color">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/normal_button_padding_left_right"
                        android:drawableRight="@mipmap/forward_black"
                        android:gravity="center_vertical"
                        android:paddingRight="@dimen/dp10"
                        android:text="Reset Content"
                        android:textColor="@color/dullBlack"
                        android:textSize="@dimen/post_text_size" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/changePasswordCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/privacyCard"
                android:layout_marginLeft="@dimen/dp5"
                android:layout_marginTop="@dimen/dp5"
                android:layout_marginRight="@dimen/dp5">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp40"
                    android:background="@color/left_panel_background_color">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/normal_button_padding_left_right"
                        android:drawableRight="@mipmap/forward_black"
                        android:gravity="center_vertical"
                        android:paddingRight="@dimen/dp10"
                        android:text="Change Password"
                        android:textColor="@color/dullBlack"
                        android:textSize="@dimen/post_text_size" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp5"
                android:layout_marginTop="@dimen/dp5"
                android:layout_marginRight="@dimen/dp5"
                android:visibility="gone"
                android:foreground="?android:attr/selectableItemBackground">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp40"
                    android:background="@color/left_panel_background_color">

                    <Switch
                        android:id="@+id/switchDayNight"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/normal_button_padding_left_right"
                        android:shadowColor="@color/blue"
                        android:text="@string/day_night_mode"
                        android:textColor="@color/dullBlack"
                        android:textSize="@dimen/post_text_size" />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <Button
                android:id="@+id/clearofflineBtn"
                android:layout_width="@dimen/dp250"
                android:layout_height="@dimen/dp40"
                android:layout_gravity="center"
                android:layout_margin="@dimen/dp10"
                android:background="@drawable/bg_signup_btn"
                android:gravity="center"
                android:paddingLeft="@dimen/dp10"
                android:paddingRight="@dimen/dp10"
                android:text="Clear Offline Media from Device"
                android:textAllCaps="false"
                android:textColor="@color/left_panel_header_text_color"
                android:textSize="@dimen/sp15" />

            <Button
                android:id="@+id/clearAllDQB"
                android:layout_width="@dimen/dp250"
                android:layout_height="@dimen/dp40"
                android:layout_gravity="center"
                android:layout_margin="@dimen/dp10"
                android:background="@drawable/bg_signup_btn"
                android:gravity="center"
                android:paddingLeft="@dimen/dp10"
                android:paddingRight="@dimen/dp10"
                android:text="Rese"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/sp15"
                android:visibility="gone" />
        </LinearLayout>
    </ScrollView>


</LinearLayout>
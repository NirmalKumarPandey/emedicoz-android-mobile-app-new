<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_round_corner_fill_white"
    android:orientation="vertical"
    android:paddingBottom="@dimen/dp10">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_rectangle_white_grey_gradient"
        android:gravity="center_horizontal"
        android:paddingTop="@dimen/dp10"
        android:paddingBottom="@dimen/dp10"
        android:textColor="@color/black"
        android:textSize="@dimen/sp17"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp20"
        android:layout_marginTop="@dimen/dp20"
        android:layout_marginEnd="@dimen/dp20"
        android:gravity="center_horizontal"
        android:textAlignment="center"
        android:textSize="@dimen/sp14" />

    <TextView
        android:id="@+id/tv_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp20"
        android:gravity="center_horizontal"
        android:textSize="@dimen/sp14" />

    <TextView
        android:id="@+id/tv_mobile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp20"
        android:gravity="center_horizontal"
        android:textAlignment="center"
        android:textSize="@dimen/sp14" />

    <TextView
        android:id="@+id/tvText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp10"
        android:padding="@dimen/dp10"
        android:text="@string/see_details"
        android:textSize="@dimen/sp15"
        android:visibility="visible" />

    <LinearLayout
        android:id="@+id/ll_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp20"
        android:layout_marginEnd="@dimen/dp20"
        android:gravity="center_horizontal"
        android:visibility="visible">

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp35"
            android:layout_marginTop="@dimen/dp20"
            android:layout_marginBottom="@dimen/dp20"
            android:background="@drawable/bg_round_corner_fill_red"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingStart="@dimen/dp30"
            android:paddingEnd="@dimen/dp30"
            android:text="@string/cancel"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/sp14" />

        <androidx.legacy.widget.Space
            android:id="@+id/space"
            android:layout_width="@dimen/dp10"
            android:layout_height="match_parent" />

        <Button
            android:id="@+id/btn_submit"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp35"
            android:layout_marginTop="@dimen/dp20"
            android:layout_marginBottom="@dimen/dp20"
            android:background="@drawable/bg_round_corner_fill_green"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingStart="@dimen/dp30"
            android:paddingEnd="@dimen/dp30"
            android:text="OK"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/sp14" />

    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp5">

        <TextView
            android:id="@+id/nameTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp2"
            android:text="Vipul Kumar"
            android:textColor="@color/black"
            android:textSize="@dimen/sub_heading_text_size"
            android:textStyle="bold" />


        <ImageButton
            android:id="@+id/editReviewIBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@color/colorPrimary"
            android:padding="@dimen/dp5"
            android:src="@mipmap/edit_white"
            android:visibility="gone" />

        <RelativeLayout
            android:id="@+id/RL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nameTV"
            android:gravity="center">

            <RatingBar
                android:id="@+id/ratingRB"
                style="@style/Base.Widget.AppCompat.RatingBar.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:rating="5" />

            <TextView
                android:id="@+id/timeTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_gravity="right"
                android:layout_marginLeft="@dimen/dp5"
                android:layout_toRightOf="@+id/ratingRB"
                android:padding="@dimen/dp2"
                android:text="18 hours ago, 6:20 pm"
                android:textColor="@color/black"
                android:textSize="@dimen/extrasmall_text_size_11" />
        </RelativeLayout>

        <TextView
            android:id="@+id/descriptionTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/RL"
            android:alpha="0.7"
            android:padding="@dimen/dp2"
            android:text="Course Name zldkjvnzlksjn zlsdkjvnslkdn alskdvnasldkn lksnalk lsdkvnzslkdn lkjvnzlsdkn lksndlaskn "
            android:textColor="@color/black"
            android:textSize="@dimen/post_text_size" />
    </RelativeLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/review_profile_img1"
        android:layout_width="@dimen/dp45"
        android:layout_height="@dimen/dp45"
        android:layout_alignParentStart="true"
        android:padding="@dimen/dp5"
        android:src="@drawable/profile_image" />

    <TextView
        android:id="@+id/reviewer_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp5"
        android:layout_marginTop="@dimen/dp2"
        android:layout_toEndOf="@+id/review_profile_img1"
        android:text="Ajay Sharma"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <RatingBar
        android:id="@+id/reviewer_1_rating"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/reviewer_1"
        android:layout_margin="@dimen/dp5"
        android:layout_toEndOf="@+id/review_profile_img1"
        android:progressTint="@color/skyBlue"
        android:numStars="5"
        android:rating="2.0"
        android:stepSize="1.0" />


    <TextView
        android:id="@+id/review_date_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/reviewer_1"
        android:layout_marginStart="@dimen/dp5"
        android:layout_marginTop="@dimen/dp5"
        android:layout_toEndOf="@+id/reviewer_1_rating"
        android:textColor="@color/grey_new"
        android:textSize="@dimen/dp10" />

    <TextView
        android:id="@+id/reviewer_1_comments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/reviewer_1_rating"
        android:layout_marginStart="@dimen/dp5"
        android:layout_marginTop="@dimen/dp5"
        android:layout_marginEnd="@dimen/dp5"
        android:text="Lorem ipsum dolor sit amet, consecteturadipiscing elit, nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat. "
        android:textColor="@color/grey_new"
        android:textSize="@dimen/dp10" />


    <View
        android:id="@+id/divider_1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/reviewer_1_comments"
        android:layout_marginStart="@dimen/dp5"
        android:layout_marginEnd="@dimen/dp5"
        android:layout_marginBottom="@dimen/dp20"
        android:layout_marginTop="@dimen/dp10"
        android:background="?android:attr/listDivider" />


</RelativeLayout>

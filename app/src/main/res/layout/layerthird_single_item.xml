<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dp3">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="@dimen/dp2"
        android:layout_marginRight="6dp"
        android:layout_marginBottom="@dimen/dp2"
        android:padding="@dimen/dp3"
        app:cardCornerRadius="@dimen/dp5"
        app:cardElevation="@dimen/dp2">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/study_single_itemLL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="@dimen/dp7">

            <ImageView
                android:id="@+id/study_item_logoIV"
                android:layout_width="@dimen/dp40"
                android:layout_height="@dimen/dp40"
                android:padding="@dimen/dp5"
                android:src="@mipmap/courses_blue" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/dp50"
                android:layout_marginLeft="@dimen/dp10"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/study_item_titleTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:maxLines="2"
                    android:textColor="@color/black"
                    android:textSize="@dimen/post_text_size" />

                <TextView
                    android:id="@+id/studySubTitleTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:maxLines="2"
                    android:textColor="@color/black"
                    android:textSize="@dimen/extrasmall_text_size_10" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/attemptLL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/countTextTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:ellipsize="end"
                    android:gravity="bottom"
                    android:includeFontPadding="false"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/extrasmall_text_size_10"
                    android:visibility="visible" />

                <ImageView
                    android:id="@+id/forwardIV"
                    android:layout_width="@dimen/dp15"
                    android:layout_height="@dimen/dp15"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/video"
                    android:visibility="visible" />

                <ImageView
                    android:id="@+id/locIV"
                    android:layout_width="@dimen/dp30"
                    android:layout_height="@dimen/dp40"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/lock"
                    android:visibility="gone" />
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>
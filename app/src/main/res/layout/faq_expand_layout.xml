<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/layout_faq_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp10"
        android:layout_marginTop="6dp"
        android:layout_marginRight="@dimen/dp10"
        android:layout_marginBottom="6dp"
        android:orientation="vertical"
        android:padding="5dp">

        <LinearLayout
            android:id="@+id/expandLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:id="@+id/faq_question"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.8"
                android:fontFamily="sans-serif-medium"
                android:paddingTop="@dimen/dp5"
                android:paddingBottom="@dimen/dp5"
                android:text="Where can i access this course ?"
                android:textColor="#4d4d4d"
                android:textSize="@dimen/sp15"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/expandTV"
                android:layout_width="@dimen/dp28"
                android:layout_height="@dimen/dp28"
                android:layout_weight="0.2"
                android:gravity="center"
                android:text="+"
                android:textColor="@color/blue"
                android:textSize="@dimen/sp22"
                android:textStyle="bold"
                android:visibility="visible" />

            <TextView
                android:id="@+id/collapseTV"
                android:layout_width="@dimen/dp28"
                android:layout_height="@dimen/dp28"
                android:layout_weight="0.2"
                android:gravity="center"
                android:text="-"
                android:textColor="@color/blue"
                android:textSize="@dimen/sp22"
                android:textStyle="bold"
                android:visibility="gone" />

        </LinearLayout>

        <TextView
            android:id="@+id/answeredTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp10"
            android:layout_marginTop="@dimen/dp5"
            android:layout_marginRight="@dimen/dp10"
            android:lineSpacingExtra="3sp"
            android:paddingBottom="@dimen/dp5"
            android:text="review Answer"
            android:textColor="#a84d4d4d"
            android:textSize="13sp"
            android:visibility="gone" />

    </LinearLayout>

</RelativeLayout>
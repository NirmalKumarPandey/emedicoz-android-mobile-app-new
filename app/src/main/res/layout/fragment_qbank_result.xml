            <LinearLayout
                android:id="@+id/rateLL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp10"
                    android:text="Please rate the QBank Module"
                    android:textAlignment="center"
                    android:textSize="@dimen/sp20" />

                <RatingBar
                    android:id="@+id/ratingBar1"
                    style="?android:attr/ratingBarStyleIndicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:isIndicator="false"
                    android:numStars="5"
                    android:scaleX=".8"
                    android:scaleY=".8"
                    android:stepSize="1.0" />

            </LinearLayout>

            <!--    <EditText
                    android:id="@+id/feedbackET"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp100"
                    android:layout_margin="@dimen/dp10"
                    android:background="@drawable/bg_edit_text"
                    android:drawablePadding="@dimen/dp10"
                    android:gravity="start"
                    android:hint="Type your feedback..."
                    android:paddingStart="@dimen/dp20"
                    android:paddingTop="@dimen/dp10" />-->


        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp60"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/dp5">

        <Button
            android:id="@+id/reviewAnswer"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp50"
            android:layout_marginTop="@dimen/dp10"
            android:layout_marginEnd="@dimen/dp10"
            android:layout_weight="1"
            android:background="@drawable/btn_review_answer"
            android:text="Review Answer"
            android:textAllCaps="true"
            android:textSize="@dimen/sp15" />


        <Button
            android:id="@+id/closeBtn"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp50"
            android:layout_marginTop="@dimen/dp10"
            android:layout_weight="1"
            android:background="@drawable/bg_signup_btn"
            android:text="Close"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="@dimen/sp15" />

    </LinearLayout>

</RelativeLayout>
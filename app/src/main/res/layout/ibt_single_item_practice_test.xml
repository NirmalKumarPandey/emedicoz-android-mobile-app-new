<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ibt_test_tile_RL"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/dp200"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp7"
        android:layout_marginTop="@dimen/dp10"
        android:layout_marginRight="@dimen/dp7"
        android:layout_marginBottom="@dimen/dp2"
        app:cardCornerRadius="@dimen/dp7"
        app:cardBackgroundColor="@color/left_panel_background_color"
        app:cardElevation="@dimen/dp3">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="@dimen/dp3">

            <RelativeLayout
                android:id="@+id/videoplayerRL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/videoImage"
                    android:layout_width="@dimen/dp200"
                    android:layout_height="@dimen/dp110"
                    android:scaleType="fitXY"
                    android:src="@mipmap/courses_blue" />

                <ImageView
                    android:id="@+id/liveIV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp2"
                    android:scaleType="fitXY"
                    android:layout_marginTop="@dimen/dp3"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp5"
                    android:src="@mipmap/live" />

                <ImageView
                    android:id="@+id/playIconIV"
                    android:layout_width="@dimen/dp50"
                    android:layout_height="@dimen/dp50"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/play"
                    android:visibility="gone" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/titleTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dp3"
                    android:ellipsize="end"
                    android:gravity="left"
                    android:maxLines="1"
                    android:paddingLeft="@dimen/dp5"
                    android:paddingRight="@dimen/dp1"
                    android:text="Title of Video"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp12"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/descriptionTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dp3"
                    android:ellipsize="end"
                    android:gravity="left"
                    android:maxLines="3"
                    android:minLines="3"
                    android:paddingLeft="@dimen/dp5"
                    android:paddingRight="@dimen/dp1"
                    android:text="1 Free + 6 Paid Tests"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp12"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/description_TV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dp3"
                    android:ellipsize="end"
                    android:gravity="left"
                    android:maxLines="2"
                    android:paddingLeft="@dimen/dp5"
                    android:paddingRight="@dimen/dp1"
                    android:text="1 Free + 6 Paid Tests \n 1 Free + 6 Paid Tests"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp12"
                    android:visibility="gone" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/dp200"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:orientation="vertical"
                android:paddingBottom="@dimen/dp2">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="@dimen/dp2"
                    android:layout_marginBottom="@dimen/dp2"
                    android:gravity="end"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/priceTV"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="@dimen/dp2"
                        android:layout_weight="1"
                        android:gravity="left|bottom"
                        android:includeFontPadding="false"
                        android:maxLines="1"
                        android:paddingLeft="@dimen/dp5"
                        android:paddingRight="@dimen/dp1"
                        android:text="Rs. 499000"
                        android:textColor="@color/blue"
                        android:visibility="gone"
                        android:textSize="@dimen/post_text_size" />

                    <TextView
                        android:id="@+id/mrpCutTV"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="@dimen/dp2"
                        android:layout_weight="1"
                        android:gravity="right|bottom"
                        android:includeFontPadding="false"
                        android:maxLines="1"
                        android:paddingLeft="@dimen/dp1"
                        android:paddingRight="@dimen/dp2"
                        android:text="Rs. 499000"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp15"
                        android:visibility="gone" />

                </LinearLayout>

                <TextView
                    android:id="@+id/validityTextTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:maxLines="2"
                    android:text="dsfdsfsdfdsfdsfd"
                    android:textColor="@color/black"
                    android:textSize="10dp"
                    android:visibility="gone" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>
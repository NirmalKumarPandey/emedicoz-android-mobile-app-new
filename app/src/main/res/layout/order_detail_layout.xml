<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/white"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dp10">

        <include
            layout="@layout/invoice_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingStart="@dimen/dp10"
            android:paddingEnd="@dimen/dp10"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp20"
                    android:fontFamily="sans-serif-medium"
                    android:text="Choose Instalment Payment Date :"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp12"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp13"
                    android:background="@drawable/bg_round_corner_border_gray"
                    android:drawableEnd="@mipmap/down_black"
                    android:paddingStart="@dimen/dp12"
                    android:paddingTop="@dimen/dp15"
                    android:paddingEnd="@dimen/dp12"
                    android:paddingBottom="@dimen/dp15"
                    android:text="5th of Every Month"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp12"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp20"
                    android:background="@drawable/bg_round_corner_border_blue_fill_light_blue"
                    android:padding="@dimen/dp5"
                    android:text="Next instalment of Rs. 2750/- will be due by 5 August 2020 "
                    android:textColor="@color/blue"
                    android:textSize="@dimen/sp12" />

            </LinearLayout>

            <Button
                android:id="@+id/btn_order_detail_continue"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp40"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="@dimen/dp40"
                android:layout_marginBottom="@dimen/dp20"
                android:background="@drawable/background_btn_red"
                android:text="Continue"
                android:textColor="@color/stay_white"
                android:textSize="@dimen/sp16" />

        </RelativeLayout>

    </LinearLayout>

</ScrollView>

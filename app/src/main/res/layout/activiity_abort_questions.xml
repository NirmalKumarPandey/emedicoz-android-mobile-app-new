<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#8A000000">
    <RelativeLayout
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_pause_gradient_white"
        tools:ignore="MissingConstraints">
        <ImageView
            android:id="@+id/imgTestAbort"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp25"
            app:srcCompat="@drawable/icon_abort_qus">
        </ImageView>
        <TextView
            android:id="@+id/txtAbort"
            android:layout_marginTop="@dimen/dp4"
            android:layout_below="@+id/imgTestAbort"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/roboto_medium"
            android:text="Abort"
            android:textColor="@color/toolbar_bg_color"
            android:textSize="@dimen/dp14">
        </TextView>
        <TextView
            android:id="@+id/txtAbortConfirm"
            android:layout_marginTop="@dimen/dp25"
            android:layout_below="@+id/txtAbort"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/roboto_medium"
            android:text="Are you sure you want to end the test?"
            android:textColor="#646464"
            android:textSize="@dimen/dp14">
        </TextView>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtAbortConfirm"
            android:layout_marginStart="@dimen/dp56"
            android:layout_marginTop="@dimen/dp25"
            android:layout_marginEnd="@dimen/dp56">
            <androidx.cardview.widget.CardView
                android:id="@+id/crdCancelAbort"
                android:layout_marginBottom="@dimen/dp24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/toolbar_bg_color"
                app:cardCornerRadius="120px">
                <TextView
                    android:layout_marginTop="9dp"
                    android:layout_marginBottom="@dimen/dp10"
                    android:layout_marginEnd="36dp"
                    android:layout_marginStart="@dimen/dp38"
                    android:id="@+id/btnAbortCancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_medium"
                    android:text="@string/cancel"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dp14"
                    tools:ignore="MissingConstraints">
                </TextView>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/crdAbortSuccess"
                android:layout_marginBottom="@dimen/dp24"
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#999999"
                app:cardCornerRadius="120px">
                <TextView
                    android:layout_marginTop="9dp"
                    android:layout_marginBottom="@dimen/dp10"
                    android:layout_marginStart="@dimen/dp38"
                    android:layout_marginEnd="36dp"
                    android:id="@+id/btnAbort"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_medium"
                    android:text="ABORT"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dp14"
                    tools:ignore="MissingConstraints">
                </TextView>
            </androidx.cardview.widget.CardView>
        </RelativeLayout>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>



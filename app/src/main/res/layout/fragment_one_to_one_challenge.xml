<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context=".gamification.view.OneToOneChallengeFragment">

    <include
        android:id="@+id/headerLayout"
        layout="@layout/header_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/headerLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp90"
                android:layout_marginStart="@dimen/sp16"
                android:layout_marginTop="@dimen/sp16"
                android:layout_marginEnd="@dimen/sp16"
                android:background="@drawable/ic_rectangle_1091">

                <ImageView
                    android:id="@+id/ivPrize"
                    android:layout_width="@dimen/dp48"
                    android:layout_height="59dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/sp24"
                    app:srcCompat="@drawable/ic_prize" />

                <TextView
                    android:id="@+id/tvPrizeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginStart="@dimen/dp15"
                    android:layout_marginEnd="@dimen/dp15"
                    android:fontFamily="@font/poppins_semi_bold"
                    android:gravity="center"
                    android:text="One to One Challenge\n\nPlay and win exiting prizes"
                    android:textColor="@color/text_white"
                    android:textSize="@dimen/sp12" />

                <ImageView
                    android:layout_width="@dimen/dp48"
                    android:layout_height="59dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/sp24"
                    app:srcCompat="@drawable/ic_prize" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp90"
                android:layout_marginStart="@dimen/sp16"
                android:layout_marginTop="@dimen/sp16"
                android:layout_marginEnd="@dimen/sp16"
                android:background="@drawable/ic_rectangle_1121"
                android:orientation="horizontal"
                android:weightSum="3">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/helvetica_neue_regular"
                        android:text="Topic"
                        android:textColor="@color/gray_8e8e8e"
                        android:textSize="@dimen/sp10" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_4sp"
                        android:fontFamily="@font/helvetica_neue_med"
                        android:text="Anotmy"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp14" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_quest" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/sp10"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/helvetica_neue_regular"
                            android:text="Questions"
                            android:textColor="@color/gray_8e8e8e"
                            android:textSize="@dimen/sp10" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimen_4sp"
                            android:fontFamily="@font/helvetica_neue_med"
                            android:text="30"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp14" />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_watch" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/sp10"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/helvetica_neue_regular"
                            android:text="Total Time"
                            android:textColor="@color/gray_8e8e8e"
                            android:textSize="@dimen/sp10" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimen_4sp"
                            android:fontFamily="@font/helvetica_neue_med"
                            android:text="15 min"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp14" />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp90"
                android:layout_marginStart="@dimen/sp16"
                android:layout_marginTop="@dimen/sp16"
                android:layout_marginEnd="@dimen/sp16"
                android:background="@drawable/ic_rectangle_1103"
                android:orientation="horizontal"
                android:weightSum="1">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".70"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/sp12"
                        android:layout_marginTop="@dimen/sp20"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/helvetica_neue_med"
                            android:gravity="center"
                            android:text="Joining Code"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp14" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/sp10"
                            android:background="@drawable/ic_rectangle_1125"
                            android:fontFamily="@font/helvetica_neue_med"
                            android:gravity="center"
                            android:text="ASQ4715"
                            android:textColor="@color/qr_color"
                            android:textSize="@dimen/sp12" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/dp22"
                            android:layout_marginStart="@dimen/sp10"
                            app:srcCompat="@drawable/ic_path_8945" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/sp12"
                        android:layout_marginTop="@dimen/dimen_24dp"
                        android:layout_marginBottom="@dimen/sp12"
                        android:fontFamily="@font/helvetica_neue_med"
                        android:text="Share this code to invite others to play challenge"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp8" />

                </LinearLayout>

                <View
                    android:layout_width="1sp"
                    android:layout_height="@dimen/dp70"
                    android:layout_gravity="center_vertical"
                    android:background="@color/left_panel_background_item_active_color" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".30"
                    android:gravity="center|right"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/sp18"
                        app:srcCompat="@drawable/qr_code" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/sp12"
                        android:fontFamily="@font/helvetica_neue_med"
                        android:gravity="center"
                        android:text="Scan to Pay"
                        android:textColor="@color/toolbar_bg_color"
                        android:textSize="@dimen/sp10" />

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/sp24"
                android:fontFamily="@font/helvetica_neue_med"
                android:text="You are playing one to one challenge"
                android:textColor="@color/black"
                android:textSize="@dimen/sp14" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp16"
                android:orientation="horizontal"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/helvetica_neue_med"
                        android:text="You"
                        android:textColor="@color/color_text_gray"
                        android:textSize="@dimen/sp10" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_6sp"
                        app:srcCompat="@drawable/ic_user" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_4sp"
                        android:fontFamily="@font/helvetica_neue_med"
                        android:text="Ankur Jain"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp14" />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/helvetica_neue_med"
                    android:text="Vs"
                    android:textColor="@color/toolbar_bg_color"
                    android:textSize="@dimen/sp10" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/helvetica_neue_med"
                        android:text="Friends"
                        android:textColor="@color/color_text_gray"
                        android:textSize="@dimen/sp10" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_6sp"
                        app:srcCompat="@drawable/ic_user" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_4sp"
                        android:fontFamily="@font/helvetica_neue_med"
                        android:text="Amit Verma"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp14" />

                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/btn_submit"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp32"
                android:layout_gravity="center"
                android:layout_marginTop="64dp"
                android:layout_marginBottom="@dimen/dp16"
                android:background="@drawable/ic_rectangle_btn"
                android:fontFamily="@font/helvetica_neue_med"
                android:paddingStart="@dimen/sp26"
                android:paddingTop="@dimen/sp8"
                android:paddingEnd="@dimen/sp26"
                android:paddingBottom="@dimen/sp8"
                android:text="start playing"
                android:textColor="@color/text_white"
                android:textSize="@dimen/sp14" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
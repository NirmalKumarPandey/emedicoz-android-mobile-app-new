    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp2"
        android:orientation="vertical">

        <ProgressBar
            android:id="@+id/downloadProgessBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp5"
            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/dp2"
            android:background="@color/white"
            android:indeterminate="false"
            android:maxHeight="@dimen/dp20"
            android:minHeight="@dimen/dp7"
            android:scaleY="3"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/mainLL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <ImageView
                android:id="@+id/itemTypeimageIV"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp35"
                android:layout_gravity="center_vertical"
                android:layout_margin="@dimen/dp5"
                android:layout_weight=".3"
                android:src="@mipmap/default_pic" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1.6"
                android:orientation="vertical"
                android:paddingLeft="@dimen/dp5"
                android:paddingTop="@dimen/dp2"
                android:paddingRight="@dimen/dp5"
                android:paddingBottom="@dimen/dp2">

                <TextView
                    android:id="@+id/fileCountTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:alpha="0.8"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:paddingLeft="@dimen/dp2"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="@dimen/post_text_size" />

                <TextView
                    android:id="@+id/fileTypeTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:alpha="0.8"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:paddingLeft="@dimen/dp2"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="@dimen/post_text_size" />

                <TextView
                    android:id="@+id/messageTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:alpha="0.8"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:paddingLeft="@dimen/dp2"
                    android:textColor="@color/black_overlay"
                    android:textSize="@dimen/small_text_size" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/rl1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|right"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/downloadIV"
                    android:layout_width="@dimen/dp30"
                    android:layout_height="match_parent"
                    android:padding="@dimen/dp5"
                    android:src="@mipmap/eye_on"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/deleteIV"
                    android:layout_width="@dimen/dp30"
                    android:layout_height="match_parent"
                    android:padding="@dimen/dp5"
                    android:src="@mipmap/download_delete"
                    android:visibility="gone" />
            </LinearLayout>


        </LinearLayout>

        <View
            android:id="@+id/dividerId"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp1"
            android:background="@color/greayrefcode_dark"
            android:visibility="visible" />


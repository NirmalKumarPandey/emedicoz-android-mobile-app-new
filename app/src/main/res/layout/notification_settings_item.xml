<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp24">

        <LinearLayout
            android:id="@+id/notification_all"
            android:layout_width="@dimen/dp50"
            android:layout_height="@dimen/dp50"
            android:orientation="horizontal"
            android:background="@drawable/ic_rectangle_1543">
            <ImageView
                android:id="@+id/imgMyEarnedPoint"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/dp10"
                app:srcCompat="@drawable/ic_checked">
            </ImageView>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp24"
            android:layout_toRightOf="@+id/notification_all"
            android:fontFamily="@font/helvetica"
            android:text="@string/all"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="@dimen/dp14" />

        <androidx.appcompat.widget.SwitchCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp1"
        android:layout_marginLeft="@dimen/dp24"
        android:layout_marginRight="@dimen/dp24"
        android:background="@color/greayrefcode_dark"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp24">

        <LinearLayout
            android:id="@+id/subscriptions"
            android:layout_width="@dimen/dp50"
            android:layout_height="@dimen/dp50"
            android:background="@drawable/ic_rectangle_1544">
            <ImageView
                android:id="@+id/imgRedeem"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/dp10"
                app:srcCompat="@drawable/ic_path">
            </ImageView>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp24"
            android:layout_toRightOf="@+id/subscriptions"
            android:fontFamily="@font/helvetica"
            android:gravity="center"
            android:text="@string/subscribe"
            android:textColor="@color/black"
            android:textSize="@dimen/dp14" />

        <androidx.appcompat.widget.SwitchCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp1"
        android:layout_marginLeft="@dimen/dp24"
        android:layout_marginRight="@dimen/dp24"
        android:background="@color/greayrefcode_dark"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp24">
        <LinearLayout
            android:id="@+id/order_enroll"
            android:layout_width="@dimen/dp50"
            android:layout_height="@dimen/dp50"
            android:background="@drawable/ic_rectangle_1547">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/dp10"
                app:srcCompat="@drawable/ic_4_layers">
            </ImageView>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginTop="0dp"
            android:layout_toRightOf="@+id/order_enroll"
            android:fontFamily="@font/helvetica"
            android:text="@string/order_enroll"
            android:layout_marginLeft="@dimen/dp24"
            android:textColor="@color/black"
            android:textSize="@dimen/dp14" />

        <androidx.appcompat.widget.SwitchCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp1"
        android:layout_marginLeft="@dimen/dp24"
        android:layout_marginRight="@dimen/dp24"
        android:background="@color/greayrefcode_dark"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp24">
        <LinearLayout
            android:id="@+id/classes"
            android:layout_width="@dimen/dp50"
            android:layout_height="@dimen/dp50"
            android:background="@drawable/ic_rectangle_1550">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/dp10"
                app:srcCompat="@drawable/ic_0_layers">
            </ImageView>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/classes"
            android:layout_centerVertical="true"
            android:fontFamily="@font/helvetica"
            android:text="@string/classes"
            android:textColor="@color/black"
            android:layout_marginLeft="@dimen/dp24"
            android:textSize="@dimen/dp14" />
        <androidx.appcompat.widget.SwitchCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp1"
        android:layout_marginLeft="@dimen/dp24"
        android:layout_marginRight="@dimen/dp24"
        android:background="@color/greayrefcode_dark"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp24">
        <LinearLayout
            android:id="@+id/liner_offers"
            android:layout_width="@dimen/dp50"
            android:layout_height="@dimen/dp50"
            android:background="@drawable/ic_rectangle_1553">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/dp10"
                app:srcCompat="@drawable/ic_otherts">
            </ImageView>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/liner_offers"
            android:layout_centerVertical="true"
            android:fontFamily="@font/helvetica"
            android:text="@string/offers"
            android:layout_marginLeft="@dimen/dp24"
            android:textColor="@color/black"
            android:textSize="@dimen/dp14" />

        <androidx.appcompat.widget.SwitchCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
</LinearLayout>
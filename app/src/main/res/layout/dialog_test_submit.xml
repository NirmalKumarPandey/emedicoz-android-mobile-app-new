<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/bg_dialogbox"
    android:orientation="vertical">

    <TextView
        android:id="@+id/submitTest1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingTop="@dimen/dp10"
        android:paddingBottom="@dimen/dp10"
        android:text="Submit Test"
        android:textColor="@color/black"
        android:textSize="@dimen/sp20"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp10"
        android:fontFamily="sans-serif-medium"
        android:lineSpacingExtra="2sp"
        android:padding="@dimen/dp3"
        android:text="Test Summary"
        android:textColor="@color/black"
        android:textSize="@dimen/sp16"
        android:textStyle="normal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp10"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/totalTimeLL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp10"
                android:layout_weight="1.5">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    app:srcCompat="@drawable/ic_baseline_timer_24" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/dp5"
                    android:fontFamily="sans-serif"
                    android:text="Time Remaining"
                    android:textColor="#2e90cf"
                    android:textSize="@dimen/sp14"
                    android:textStyle="normal" />

            </LinearLayout>

            <TextView
                android:id="@+id/timeRemainingTV"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp10"
                android:layout_weight=".5"
                android:fontFamily="sans-serif"
                android:gravity="end"
                android:text="1:00:00"
                android:textColor="#2e90cf"
                android:textSize="@dimen/sp14"
                android:textStyle="normal" />

        </LinearLayout>

        <View
            android:id="@+id/totalTimeView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp1"
            android:layout_marginTop="@dimen/dp10"
            android:background="@color/colorGray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp10"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp10"
                android:layout_weight="1.5">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    app:srcCompat="@drawable/ic_baseline_help_outline_24" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/dp5"
                    android:fontFamily="sans-serif"
                    android:text="@string/total_number_of_questions"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp14"
                    android:textStyle="normal" />

            </LinearLayout>

            <TextView
                android:id="@+id/totalQuestionTV"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp10"
                android:layout_weight=".5"
                android:fontFamily="sans-serif"
                android:gravity="end"
                android:text="1:00:00"
                android:textColor="@color/black"
                android:textSize="@dimen/sp14"
                android:textStyle="normal" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp1"
            android:layout_marginTop="@dimen/dp10"
            android:background="@color/colorGray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp10"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp10"
                android:layout_weight="1.5">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    app:srcCompat="@drawable/ic_outline_check_box_24" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/dp5"
                    android:fontFamily="sans-serif"
                    android:text="@string/total_attempted"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp14"
                    android:textStyle="normal" />

            </LinearLayout>

            <TextView
                android:id="@+id/answeredTV"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp10"
                android:layout_weight=".5"
                android:fontFamily="sans-serif"
                android:gravity="end"
                android:text="1:00:00"
                android:textColor="@color/black"
                android:textSize="@dimen/sp14"
                android:textStyle="normal" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp1"
            android:layout_marginTop="@dimen/dp10"
            android:background="@color/colorGray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp10"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp10"
                android:layout_weight="1.5">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    app:srcCompat="@drawable/ic_outline_indeterminate_check_box_24" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/dp5"
                    android:fontFamily="sans-serif"
                    android:text="@string/unattempted"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp14"
                    android:textStyle="normal" />

            </LinearLayout>

            <TextView
                android:id="@+id/unansweredTV"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp10"
                android:layout_weight=".5"
                android:fontFamily="sans-serif"
                android:gravity="end"
                android:text="1:00:00"
                android:textColor="@color/black"
                android:textSize="@dimen/sp14"
                android:textStyle="normal" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp1"
            android:layout_marginTop="@dimen/dp10"
            android:background="@color/colorGray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp10"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp10"
                android:layout_weight="1.5">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    app:srcCompat="@drawable/ic_baseline_star_border_24" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/dp5"
                    android:fontFamily="sans-serif"
                    android:text="@string/marked_for_review"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp14"
                    android:textStyle="normal" />

            </LinearLayout>

            <TextView
                android:id="@+id/markedTV"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp10"
                android:layout_weight=".5"
                android:fontFamily="sans-serif"
                android:gravity="end"
                android:text="1:00:00"
                android:textColor="@color/black"
                android:textSize="@dimen/sp14"
                android:textStyle="normal" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_submit_test"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp20"
            android:paddingBottom="@dimen/dp10"
            android:text="Are you sure you want to submit this test ?"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="@dimen/sp15"
            android:textStyle="bold" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/dp15"
            android:gravity="center"
            android:weightSum="2">

            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="@dimen/dp120"
                android:layout_height="@dimen/dp40"
                android:layout_marginLeft="@dimen/dp10"
                android:layout_marginRight="@dimen/dp10"
                android:background="@drawable/bg_round_corner_fill_grey_test"
                android:text="@string/resume"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="@dimen/sp15" />

            <Button
                android:id="@+id/btn_submit"
                android:layout_width="@dimen/dp120"
                android:layout_height="@dimen/dp40"
                android:layout_marginLeft="@dimen/dp10"
                android:layout_marginRight="@dimen/dp10"
                android:background="@drawable/bg_round_corner_fill_blue"
                android:text="Submit"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="@dimen/sp15" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/dp60">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp10">


                <LinearLayout
                    android:layout_width="@dimen/dp90"
                    android:layout_height="@dimen/dp90"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp30"
                    android:background="@mipmap/progress_bar"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/myScore"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp10"
                        android:layout_marginTop="@dimen/dp20"
                        android:layout_marginEnd="@dimen/dp10"
                        android:text="Rank"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp18"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp1"
                        android:layout_marginStart="@dimen/dp15"
                        android:layout_marginEnd="@dimen/dp15"
                        android:background="@color/colorGray3" />

                    <TextView
                        android:id="@+id/totalScore"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp10"
                        android:layout_marginTop="@dimen/dp1"
                        android:layout_marginEnd="@dimen/dp10"
                        android:text="My Rank"
                        android:textAlignment="center"
                        android:textSize="@dimen/sp11" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="@dimen/dp100"
                    android:layout_height="@dimen/dp100"
                    android:layout_centerInParent="true"
                    android:layout_marginBottom="@dimen/dp10"
                    android:background="@drawable/circle_blue"
                    android:elevation="@dimen/dp30"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/myRankTV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp20"
                        android:text="Rank"
                        android:textAlignment="center"
                        android:textColor="@color/left_panel_header_text_color"
                        android:textSize="@dimen/sp20"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp5"
                        android:text="My Rank"
                        android:textAlignment="center"
                        android:textColor="@color/left_panel_header_text_color"
                        android:textSize="@dimen/sp11" />

                </LinearLayout>


                <antonkozyriatskyi.circularprogressindicator.CircularProgressIndicator
                    android:id="@+id/circular_progress"
                    android:layout_width="@dimen/dp80"
                    android:layout_height="@dimen/dp80"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="@dimen/dp15"
                    android:layout_marginEnd="@dimen/dp30"
                    android:layout_marginBottom="@dimen/dp8"
                    app:direction="clockwise"
                    app:dotColor="@color/white"
                    app:dotWidth="@dimen/dp12"
                    app:drawDot="true"
                    app:textSize="@dimen/sp14"
                    app:progressColor="@color/blue"
                    app:textColor="@color/transparent" />

                <TextView
                    android:id="@+id/percentageTV"
                    android:layout_width="@dimen/dp60"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dp15"
                    android:layout_marginEnd="@dimen/dp40"
                    android:layout_marginBottom="@dimen/dp8"
                    android:text="0%"
                    android:textSize="@dimen/sp14"
                    android:textAlignment="center"
                    android:textColor="@color/black" />


            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp15">

                <TextView
                    android:id="@+id/viewAnalysisTV"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp15"
                    android:layout_marginEnd="@dimen/dp5"
                    android:layout_weight="1"
                    android:background="@drawable/bg_btn"
                    android:padding="@dimen/dp10"
                    android:text="View Analysis"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:textColor="@color/left_panel_header_text_color"
                    android:textSize="@dimen/sp13" />

                <TextView
                    android:id="@+id/viewLeaderboardTV"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp5"
                    android:layout_marginEnd="@dimen/dp15"
                    android:layout_weight="1"
                    android:background="@drawable/bg_btn"
                    android:padding="@dimen/dp10"
                    android:text="View Leaderboard"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:textColor="@color/left_panel_header_text_color"
                    android:textSize="@dimen/sp13" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp15">

                <TextView
                    android:id="@+id/viewReattemptTV"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp15"
                    android:layout_marginRight="@dimen/dp15"
                    android:layout_weight="1"
                    android:background="@drawable/bg_btn"
                    android:padding="@dimen/dp10"
                    android:text="Reattempt"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:textColor="@color/left_panel_header_text_color"
                    android:visibility="gone"
                    android:textSize="@dimen/sp13" />
            </LinearLayout>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp15"
                android:layout_marginTop="@dimen/dp25"
                android:layout_marginEnd="@dimen/dp15"
                android:layout_marginBottom="@dimen/dp15"
                app:cardCornerRadius="@dimen/dp4"
                app:cardElevation="@dimen/dp4"
                app:cardBackgroundColor="@color/left_panel_background_color">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/testSeriesName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/dp15"
                        android:layout_marginTop="@dimen/dp5"
                        android:layout_marginEnd="@dimen/dp5"
                        android:background="@drawable/bg_light_blue_rounded"
                        android:padding="@dimen/sp10"
                        android:text="Test Series Name"
                        android:textAlignment="center"
                        android:textAllCaps="false"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp13" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp5">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/dp5"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/candidateTV"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="123456"
                                android:textSize="@dimen/sp14"
                                android:textAlignment="center"
                                android:textColor="@color/blue"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Candidate"
                                android:textSize="@dimen/sp14"
                                android:textAlignment="center" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/dp5"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/totalQues"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="123456"
                                android:textSize="@dimen/sp14"
                                android:textAlignment="center"
                                android:textColor="@color/blue"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Questions"
                                android:textSize="@dimen/sp14"
                                android:textAlignment="center" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/dp5"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/marksTV"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="123456"
                                android:textSize="@dimen/sp14"
                                android:textAlignment="center"
                                android:textColor="@color/blue"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Marks"
                                android:textSize="@dimen/sp14"
                                android:textAlignment="center" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/dp5"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/totalTimeTV"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="123456"
                                android:textSize="@dimen/sp14"
                                android:textAlignment="center"
                                android:textColor="@color/blue"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Duration"
                                android:textSize="@dimen/sp14"
                                android:textAlignment="center" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp15"
                app:cardCornerRadius="@dimen/dp4"
                app:cardElevation="@dimen/dp4"
                app:cardBackgroundColor="@color/left_panel_background_color">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/dp15"
                        android:layout_marginTop="@dimen/dp5"
                        android:layout_marginEnd="@dimen/dp5"
                        android:background="@drawable/bg_light_blue_rounded"
                        android:padding="@dimen/sp10"
                        android:text="My Report"
                        android:textAlignment="center"
                        android:textAllCaps="false"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp13" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp5">

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/dp5"
                            android:layout_weight="1"
                            android:background="@drawable/bg_result_detail">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:padding="@dimen/dp5"
                                android:textSize="@dimen/sp14"
                                android:text="My Rank"
                                android:textColor="@color/black" />

                            <TextView
                                android:id="@+id/rankTV"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:paddingTop="@dimen/dp5"
                                android:textSize="@dimen/sp14"
                                android:paddingEnd="@dimen/dp10"
                                android:paddingBottom="@dimen/dp5"
                                android:text="My Rank"
                                android:textColor="@color/blue"
                                android:textStyle="bold" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/timeTakenRL"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/dp5"
                            android:layout_weight="1"
                            android:background="@drawable/bg_result_detail"
                            android:visibility="gone">

                            <TextView

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:padding="@dimen/dp5"
                                android:text="Time taken"
                                android:textColor="@color/black" />

                            <TextView
                                android:id="@+id/timeTakenTV"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:padding="@dimen/dp5"
                                android:text="My Rank"
                                android:textColor="@color/blue"
                                android:textStyle="bold" />

                        </RelativeLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp5">

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/dp5"
                            android:layout_weight="1"
                            android:background="@drawable/bg_result_detail">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:padding="@dimen/dp5"
                                android:textSize="@dimen/sp14"
                                android:text="My Score"
                                android:textColor="@color/black" />

                            <TextView
                                android:id="@+id/myScoreTV"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:paddingTop="@dimen/dp5"
                                android:paddingEnd="@dimen/dp10"
                                android:paddingBottom="@dimen/dp5"
                                android:textSize="@dimen/sp14"
                                android:text="My Rank"
                                android:textColor="@color/blue"
                                android:textStyle="bold" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/dp5"
                            android:layout_weight="1"
                            android:background="@drawable/bg_result_detail">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:padding="@dimen/dp5"
                                android:textSize="@dimen/sp14"
                                android:text="Attempted"
                                android:textColor="@color/black" />

                            <TextView
                                android:id="@+id/attemptedTV"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:paddingTop="@dimen/dp5"
                                android:paddingEnd="@dimen/dp10"
                                android:textSize="@dimen/sp14"
                                android:paddingBottom="@dimen/dp5"
                                android:text="My Rank"
                                android:textColor="@color/blue"
                                android:textStyle="bold" />

                        </RelativeLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp5">

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/dp5"
                            android:layout_weight="1"
                            android:background="@drawable/bg_result_detail">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:padding="@dimen/dp5"
                                android:textSize="@dimen/sp14"
                                android:text="My Percentile"
                                android:textColor="@color/black" />

                            <TextView
                                android:id="@+id/percentileTV"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:paddingTop="@dimen/dp5"
                                android:paddingEnd="@dimen/dp10"
                                android:paddingBottom="@dimen/dp5"
                                android:textSize="@dimen/sp14"
                                android:text="My Rank"
                                android:textColor="@color/blue"
                                android:textStyle="bold" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/dp5"
                            android:layout_weight="1"
                            android:background="@drawable/bg_result_detail">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:padding="@dimen/dp5"
                                android:textSize="@dimen/sp14"
                                android:text="Guess"
                                android:textColor="@color/black" />

                            <TextView
                                android:id="@+id/guessTV"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:paddingTop="@dimen/dp5"
                                android:paddingEnd="@dimen/dp10"
                                android:paddingBottom="@dimen/dp5"
                                android:text="My Rank"
                                android:textSize="@dimen/sp14"
                                android:textColor="@color/blue"
                                android:textStyle="bold" />

                        </RelativeLayout>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp1"
                        android:layout_marginTop="@dimen/dp10"
                        android:layout_marginBottom="@dimen/dp5"
                        android:background="@color/colorGray3" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/dp5"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/correctTV"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="123456"
                                android:textAlignment="center"
                                android:textColor="@color/correct"
                                android:textSize="@dimen/sp18"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Right"
                                android:textSize="@dimen/sp14"
                                android:textAlignment="center" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/dp5"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/incorrectTV"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="123456"
                                android:textAlignment="center"
                                android:textColor="@color/incorrect"
                                android:textSize="@dimen/sp18"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Wrong"
                                android:textSize="@dimen/sp14"
                                android:textAlignment="center" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/dp5"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/skippedTV"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="123456"
                                android:textAlignment="center"
                                android:textColor="@color/skipped"
                                android:textSize="@dimen/sp18"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Skipped"
                                android:textSize="@dimen/sp14"
                                android:textAlignment="center" />

                        </LinearLayout>

                    </LinearLayout>


                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp10">


        <TextView
            android:id="@+id/viewSolutionTV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp15"
            android:layout_marginEnd="@dimen/dp5"
            android:layout_weight="1"
            android:background="@drawable/bg_btn"
            android:padding="@dimen/dp10"
            android:text="View Solution"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/left_panel_header_text_color"
            android:textSize="@dimen/sp13" />


        <RelativeLayout
            android:id="@+id/videoSolutionTV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp5"
            android:layout_marginEnd="@dimen/dp15"
            android:layout_weight="1"
            android:background="@drawable/bg_btn">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:padding="@dimen/dp10"
                android:text="Video Solution"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/left_panel_header_text_color"
                android:textSize="@dimen/sp13" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/dp10"
                android:src="@mipmap/video_solutin_icon" />

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>
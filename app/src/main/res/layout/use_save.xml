<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lytUseSave">

    <RelativeLayout
        android:layout_marginStart="@dimen/dp8"
        android:layout_marginEnd="@dimen/dp8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            tools:ignore="MissingConstraints">
            <RelativeLayout
                android:padding="@dimen/dp8"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1">
                <RelativeLayout
                    android:id="@+id/crdLiveCourse"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_capsule_fill_whitw_grey_box">
                    <ImageView
                        android:id="@+id/imgLiveCourse"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp17"
                        android:layout_marginTop="@dimen/dp12"
                        android:layout_marginEnd="@dimen/dp17"
                        app:srcCompat="@drawable/ic_ultimate_course" />

                    <TextView
                        android:id="@+id/txtUseSaveLeftHeader"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/imgLiveCourse"
                        android:layout_marginStart="@dimen/dp12"
                        android:layout_marginTop="@dimen/dp13"
                        android:fontFamily="@font/helvetica_neue_medium"
                        android:gravity="center"
                        android:text="Ultimate Live Course"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dp13" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/crdBuyPointLeft"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txtUseSaveLeftHeader"
                        android:layout_marginStart="@dimen/dp11"
                        android:layout_marginTop="@dimen/dp12"
                        android:layout_marginEnd="@dimen/dp11"
                        app:cardBackgroundColor="@color/toolbar_bg_color"
                        app:cardCornerRadius="4px"
                        app:cardMaxElevation="@dimen/dp5">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp5"
                            android:layout_marginBottom="@dimen/dp5"
                            android:text="Buy in 10000 PT"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="@dimen/dp10">
                        </TextView>
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/crdBuyPointLeft"
                        android:layout_marginTop="@dimen/dp4"
                        android:layout_marginBottom="@dimen/dp12"
                        android:gravity="center"
                        android:text="1000 PT + Pay 9000"
                        android:textColor="#8e8e8e"
                        android:textSize="@dimen/dimen_8dp">
                    </TextView>
                </RelativeLayout>
            </RelativeLayout>
            <RelativeLayout
                android:padding="@dimen/dp8"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1">
                <RelativeLayout
                    android:id="@+id/lytLiveCourseRight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_capsule_fill_whitw_grey_box">
                    <ImageView
                        android:id="@+id/imgUseSave"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp17"
                        android:layout_marginTop="@dimen/dp12"
                        android:layout_marginEnd="@dimen/dp17"
                        app:srcCompat="@drawable/ic_ultimate_course" />
                    <TextView
                        android:id="@+id/txtUltimateCourseRight"
                        android:layout_below="@+id/imgUseSave"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp12"
                        android:layout_marginTop="@dimen/dp13"
                        android:fontFamily="@font/helvetica_neue_medium"
                        android:gravity="center"
                        android:text="Ultimate Live Course"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dp13" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/crdRightView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txtUltimateCourseRight"
                        android:layout_marginStart="@dimen/dp11"
                        android:layout_marginTop="@dimen/dp12"
                        android:layout_marginEnd="@dimen/dp11"
                        app:cardBackgroundColor="@color/toolbar_bg_color"
                        app:cardCornerRadius="4px"
                        app:cardMaxElevation="@dimen/dp5">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp5"
                            android:layout_marginBottom="@dimen/dp5"
                            android:text="Buy in 10000 PT"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="@dimen/dp10">
                        </TextView>
                    </androidx.cardview.widget.CardView>
                    <TextView
                        android:layout_below="@+id/crdRightView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp4"
                        android:layout_marginBottom="@dimen/dp12"
                        android:text="1000 PT + Pay 9000"
                        android:gravity="center"
                        android:textColor="#8e8e8e"
                        android:textSize="@dimen/dimen_8dp">
                    </TextView>
                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>

    </RelativeLayout>



</androidx.constraintlayout.widget.ConstraintLayout>
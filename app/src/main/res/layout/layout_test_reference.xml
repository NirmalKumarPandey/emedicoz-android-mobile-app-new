<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/test_ref_root_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp10"
    android:background="@color/chat_user_bg_color"
    android:padding="8dp"
    android:visibility="visible">

    <TextView
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp5"
        android:text="@string/reference"
        android:textColor="@color/black_color_title"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_ref"
            android:layout_width="@dimen/dp56"
            android:layout_height="@dimen/dp56"
            android:layout_marginStart="@dimen/dp5"
            android:src="@mipmap/daily_quiz_logo" />

        <TextView
            android:id="@+id/txv_ref_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp10"
            android:maxLines="4"
            android:text="XXXX XXX\nXXX XX XXXX XX \nXX"
            android:textColor="@color/light_black" />
    </LinearLayout>
</RelativeLayout>
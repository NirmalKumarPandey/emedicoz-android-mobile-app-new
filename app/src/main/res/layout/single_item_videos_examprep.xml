<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ibt_single_sub_vd_RL"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp5"
        android:layout_marginTop="@dimen/dp2"
        android:layout_marginRight="@dimen/dp5"
        android:layout_marginBottom="@dimen/dp2"
        android:padding="@dimen/dp3"
        app:cardCornerRadius="@dimen/dp5"
        app:cardElevation="@dimen/dp2">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="@dimen/dp7">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/ibt_single_sub_vd_tv_day"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxLines="2"
                            android:text="1."
                            android:textColor="@color/blue"
                            android:textSize="@dimen/small_text_size"
                            android:visibility="visible" />

                        <TextView
                            android:id="@+id/ibt_single_sub_vd_tv_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp5"
                            android:ellipsize="end"
                            android:maxLines="2"
                            android:text="Ratio and Proportion"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp14" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/ibt_single_sub_vd_tv_des"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp15"
                        android:layout_marginTop="@dimen/dp10"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:text="Description"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp12" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp10">

                        <TextView
                            android:id="@+id/tv_liveon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:layout_marginLeft="@dimen/dp15"
                            android:ellipsize="end"
                            android:text="Live On : "
                            android:textColor="@color/blue"
                            android:textSize="@dimen/sp12"
                            android:visibility="visible" />

                        <TextView
                            android:id="@+id/tv_liveon_date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:maxLines="2"
                            android:text="12-jan-2020 03:20 pm"
                            android:textColor="@color/dullBlack"
                            android:textSize="@dimen/sp12"
                            android:visibility="visible" />
                    </LinearLayout>


                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/ImageRL"
                    android:layout_width="@dimen/dp100"
                    android:layout_height="@dimen/dp100">

                    <ImageView
                        android:id="@+id/ibt_single_sub_vd_iv"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:src="@mipmap/courses_blue" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:gravity="center_horizontal">

                        <ImageView
                            android:id="@+id/locIV"
                            android:layout_width="@dimen/dp50"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/lock"
                            android:visibility="visible" />

                        <ImageView
                            android:id="@+id/downloadIV"
                            android:layout_width="@dimen/dp30"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:src="@mipmap/download_new_course"
                            android:visibility="visible" />

                        <ImageView
                            android:id="@+id/deleteIV"
                            android:layout_width="@dimen/dp30"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toEndOf="@id/downloadIV"
                            android:src="@mipmap/cross"
                            android:visibility="visible" />

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/liveIV"
                        android:layout_width="@dimen/dp35"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginLeft="@dimen/dp2"
                        android:layout_marginTop="@dimen/dp2"
                        android:src="@mipmap/live"
                        android:tint="@color/white"
                        android:visibility="visible" />

                    <ImageView
                        android:layout_width="@dimen/dp20"
                        android:layout_height="@dimen/dp20"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentBottom="true"
                        android:layout_margin="@dimen/dp2"
                        android:layout_marginStart="-1dp"
                        android:layout_marginLeft="@dimen/dp1"
                        android:layout_marginBottom="@dimen/dp2"
                        android:src="@mipmap/video"
                        android:visibility="visible" />
                </RelativeLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/messageTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/dp5"
                android:text="@string/download_queued"
                android:textColor="@color/dullBlack"
                android:textStyle="bold|italic"
                android:visibility="visible" />

            <LinearLayout
                android:id="@+id/ll_download_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="start"
                android:orientation="horizontal"
                android:padding="@dimen/dp5"
                android:visibility="visible">

                <TextView
                    android:id="@+id/iv_show"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp10"
                    android:gravity="center"
                    android:text="View Underline"
                    android:textColor="@color/colorPrimary"
                    android:visibility="visible" />
            </LinearLayout>

            <ProgressBar
                android:id="@+id/downloadProgessBar"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp8"
                android:indeterminate="false"
                android:maxHeight="@dimen/dp3"
                android:minHeight="@dimen/dp3"
                android:visibility="visible" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp10"
        android:elevation="@dimen/dp3"
        app:cardCornerRadius="@dimen/dp10">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp10">

            <TextView
                android:id="@+id/moduleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/RecordedCoursesCategoryName"
                android:layout_centerVertical="true"
                android:layout_marginStart="0dp"
                android:ellipsize="end"
                android:lines="1"
                android:maxLines="1"
                android:text="Module 1" />


            <TextView
                android:id="@+id/module_details"
                style="@style/RecordedCourseDetailText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/dp10"
                android:layout_toStartOf="@+id/img_expanded"
                android:layout_toEndOf="@id/moduleText"
                android:textAlignment="textEnd"
                android:textColor="@color/record_course_category_title"
                tools:text="@string/_14_videos_42_minutes" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/img_expanded"
                android:layout_width="@dimen/dp15"
                android:layout_height="@dimen/dp15"
                android:layout_alignParentEnd="true"
                style="@style/RecordedCourseDetailText"
                android:layout_marginEnd="@dimen/dp10"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_baseline_add_24" />


        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/notifyRL"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp2"
    android:layout_marginBottom="@dimen/dp2"
    android:background="@color/white"
    android:paddingLeft="@dimen/dp15"
    android:paddingTop="@dimen/normal_button_padding_left_right"
    android:paddingRight="@dimen/dp15"
    android:paddingBottom="@dimen/normal_button_padding_left_right">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/descriptionTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:paddingLeft="@dimen/dp5"
                android:text="you have earned"
                android:textColor="@color/black"
                android:textSize="@dimen/post_text_size" />

            <TextView
                android:id="@+id/timeTV"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp20"
                android:layout_below="@+id/descriptionTV"
                android:layout_marginTop="@dimen/dp5"
                android:drawableLeft="@mipmap/clock"
                android:drawablePadding="@dimen/dp4"
                android:gravity="center"
                android:padding="@dimen/dp2"
                android:textSize="@dimen/extrasmall_text_size_11" />
        </LinearLayout>

        <TextView
            android:id="@+id/pointsTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp5"
            android:layout_toRightOf="@+id/descriptionTV"
            android:gravity="center"
            android:maxWidth="@dimen/dp40"
            android:padding="@dimen/dp2"
            android:text="30"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/heading_text_size"
            android:textStyle="bold" />
    </LinearLayout>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginBottom="@dimen/dp20"
    android:background="#edf4fe"
    android:id="@+id/lytMultipleCoin"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:layout_marginStart="@dimen/dp16"
        android:layout_marginEnd="@dimen/dp16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_marginBottom="@dimen/dp24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4"
            tools:ignore="MissingConstraints">

            <RelativeLayout
                android:id="@+id/relativeMyEarnedPoint"
                android:layout_marginEnd="@dimen/dp12"
                android:layout_marginTop="@dimen/dp24"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1">
                <androidx.cardview.widget.CardView
                    android:id="@+id/crdMyEarnedCoins"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="#90caf9"
                    app:cardCornerRadius="@dimen/dp8">
                    <ImageView
                        android:id="@+id/imgMyEarnedPoint"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="@dimen/dp4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_my_earned_point">
                    </ImageView>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/crdMyEarnedCoins"
                    android:layout_marginTop="@dimen/dp4"
                    android:fontFamily="@font/helvetica_neue_medium"
                    android:lineSpacingExtra="@dimen/dp1"
                    android:padding="2dp"
                    android:text="My Earned Points"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dp11"></TextView>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativeRedeem"
                android:layout_marginStart="@dimen/dp12"
                android:layout_marginEnd="@dimen/dp12"
                android:layout_marginTop="@dimen/dp24"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1">
                <androidx.cardview.widget.CardView
                    android:id="@+id/crdRedeem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="#90caf9"
                    app:cardCornerRadius="@dimen/dp8">
                    <ImageView
                        android:id="@+id/imgRedeem"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="@dimen/dp4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_redeem">
                    </ImageView>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_marginTop="@dimen/dp4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/crdRedeem"
                    android:fontFamily="@font/helvetica_neue_medium"
                    android:lineSpacingExtra="@dimen/dp1"
                    android:padding="2dp"
                    android:text="Redeem"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dp11">
                </TextView>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativePlayGame"
                android:layout_marginStart="@dimen/dp12"
                android:layout_marginEnd="@dimen/dp12"
                android:layout_marginTop="@dimen/dp24"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1">
                <androidx.cardview.widget.CardView
                    android:id="@+id/crdPlayGames"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="#90caf9"
                    app:cardCornerRadius="@dimen/dp8">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        app:srcCompat="@drawable/ic_play_games">
                    </ImageView>
                </androidx.cardview.widget.CardView>
                <TextView
                    android:layout_marginTop="4dp"
                    android:layout_below="@+id/crdPlayGames"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/helvetica_neue_medium"
                    android:lineSpacingExtra="@dimen/dp1"
                    android:padding="2dp"
                    android:text="Play        Games"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dp11">
                </TextView>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativeEarnPoint"
                android:layout_marginStart="@dimen/dp12"
                android:layout_marginTop="@dimen/dp24"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1">
                <androidx.cardview.widget.CardView
                    android:id="@+id/crdEarnPoints"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="#90caf9"
                    app:cardCornerRadius="@dimen/dp8">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        app:srcCompat="@drawable/earn_points">
                    </ImageView>
                </androidx.cardview.widget.CardView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/crdEarnPoints"
                    android:fontFamily="@font/helvetica_neue_medium"
                    android:padding="2dp"
                    android:lineSpacingExtra="@dimen/dp1"
                    android:text="Earn               Points"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dp11" />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>


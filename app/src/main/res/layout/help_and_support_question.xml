<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp10"
    android:background="@color/white"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/question_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/off_white_color"
        android:padding="@dimen/dp10">

        <TextView
            android:id="@+id/question"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/image_expanded"
            android:text="How to purchase Books ?"
            android:textColor="@color/black" />

        <ImageView
            android:id="@+id/image_expanded"
            android:layout_width="@dimen/dp30"
            android:layout_height="@dimen/dp25"
            android:layout_alignParentEnd="true"
            app:srcCompat="@drawable/ic_baseline_keyboard_arrow_up_24" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/description_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp5"
        android:visibility="gone">

        <TextView
            android:id="@+id/ans"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp20"
            android:layout_marginEnd="@dimen/dp5"
            android:justificationMode="inter_word"
            android:text="Click on Printed Books under browse by Product Type"
            android:textColor="@color/help_ans"
            android:textSize="12sp" />

    </RelativeLayout>

</LinearLayout>
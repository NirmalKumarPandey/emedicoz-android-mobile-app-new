<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Books.Activity.BookDescriptionActivity">


    <include
        android:id="@+id/toolbarAddressList"
        layout="@layout/layout_common_toolbar" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:id="@+id/parentRv"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_margin="@dimen/dp10"
                    android:orientation="vertical"
                    app:cardCornerRadius="@dimen/dp8">


                    <!-- viewpager to show images -->

                    <RelativeLayout
                        android:id="@+id/viewPagerRL"
                        android:layout_width="match_parent"
                        android:layout_height="232dp">

                        <androidx.viewpager.widget.ViewPager
                            android:id="@+id/viewPagerMain"
                            android:layout_width="match_parent"
                            android:layout_height="232dp" />

                        <com.google.android.material.tabs.TabLayout
                            android:id="@+id/tab_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@+id/viewPagerMain"
                            android:layout_alignParentBottom="true"
                            app:tabBackground="@drawable/tab_selector"
                            app:tabGravity="center"
                            app:tabIndicatorHeight="0dp" />
                    </RelativeLayout>


                </androidx.cardview.widget.CardView>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/dp10">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">


                        <TextView
                            android:id="@+id/bookTitleTV"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.4"
                            android:ellipsize="end"
                            android:maxLines="2"
                            android:minLines="1"
                            android:text="DAMS Neurosciences-Question Bank (For NIMHANS Enterance.."
                            android:textColor="@color/black"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/wishImg"
                            android:layout_width="@dimen/sp21"
                            android:layout_height="@dimen/dp23"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="0.3"
                            android:padding="@dimen/dp5"
                            android:src="@mipmap/heart_icon_book" />

                        <ImageView
                            android:id="@+id/shareImg"
                            android:layout_width="@dimen/sp21"
                            android:layout_height="@dimen/dimen_23dp"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="0.3"
                            android:src="@mipmap/share_book_icon" />


                    </LinearLayout>

                    <RelativeLayout
                        android:id="@+id/priceRL"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical">


                        <TextView
                            android:id="@+id/mrpTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/dp5"
                            android:text="MRP :150"
                            android:textSize="13sp"
                            tools:ignore="SmallSp" />


                        <TextView
                            android:id="@+id/priceTv"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="17dp"
                            android:layout_toEndOf="@+id/mrpTv"
                            android:text="119"
                            android:textColor="@color/black"
                            android:textSize="17sp"
                            android:textStyle="bold"
                            tools:ignore="SmallSp" />

                        <View
                            android:id="@+id/view"
                            android:layout_width="@dimen/dp1"
                            android:layout_height="12dp"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="5dp"
                            android:layout_toEndOf="@+id/priceTv"
                            android:background="@color/greayrefcode_dark" />

                        <TextView
                            android:id="@+id/parcentageTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp5"
                            android:layout_marginTop="@dimen/dp2"
                            android:layout_toEndOf="@+id/view"
                            android:text="28%off"
                            android:textColor="#428852"
                            android:textSize="13sp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rel_extra"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/autherTv"
                        android:layout_toEndOf="@+id/imageIV">

                        <RatingBar
                            android:id="@+id/ratingRB"
                            style="?android:attr/ratingBarStyleSmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_margin="@dimen/dp5"
                            android:numStars="5"
                            android:rating="2.0"
                            android:stepSize="1.0" />

                        <TextView
                            android:id="@+id/txtRatingTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/dp2"
                            android:layout_toEndOf="@+id/ratingRB"
                            android:text="21 Ratings"
                            android:textSize="10sp"
                            tools:ignore="SmallSp" />


                    </RelativeLayout>


                </LinearLayout>


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_marginTop="@dimen/dp10"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="10dp">

                        <Button
                            android:id="@+id/buyNowBtn"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/dp5"
                            android:layout_weight="1"
                            android:background="#61a2f7"
                            android:text="@string/buy_now"
                            android:textColor="#ffffff" />


                        <Button
                            android:id="@+id/AddToCartBT"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="@dimen/dp5"
                            android:layout_weight="1"
                            android:background="#5c5c5c"
                            android:drawableLeft="@mipmap/cartbook"
                            android:gravity="center"
                            android:paddingLeft="@dimen/dp40"
                            android:text="Add to Cart"
                            android:textColor="#ffffff" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp10"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/dp10">

                        <TextView
                            android:id="@+id/deleveryDateTv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Get It By: Tomorrow / Today / 10 Nov"
                            android:textAllCaps="true"
                            android:textColor="@color/black"
                            android:textSize="14sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp5"
                            android:layout_marginTop="@dimen/dp10"
                            android:orientation="horizontal">

                            <TextView

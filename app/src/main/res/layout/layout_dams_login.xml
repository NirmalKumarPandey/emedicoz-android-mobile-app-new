<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:elevation="@dimen/dp5"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="@dimen/dp20">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp20"
        android:background="@drawable/bg_refcode_et">

        <EditText
            android:id="@+id/damstokenET"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp50"
            android:background="@color/transparent"
            android:drawableLeft="@mipmap/token"
            android:drawablePadding="@dimen/dp17"
            android:hint="@string/dams_roll_no"
            android:maxLines="1"
            android:paddingLeft="@dimen/dp10"
            android:paddingTop="2dp"
            android:textSize="@dimen/sp14"
            android:typeface="monospace" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/til2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/til1"
        android:layout_marginTop="@dimen/dp5"
        android:background="@drawable/bg_refcode_et">


        <EditText
            android:id="@+id/damspassET"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp50"
            android:background="@color/transparent"
            android:drawableLeft="@mipmap/lock"
            android:drawablePadding="@dimen/dp17"
            android:hint="DAMS Password"
            android:inputType="textPassword"
            android:maxLines="1"
            android:paddingLeft="@dimen/dp10"
            android:paddingTop="2dp"
            android:textSize="@dimen/sp14"
            android:typeface="monospace" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp35"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <Button
                android:id="@+id/loginBtn"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/normal_button_height"
                android:layout_centerHorizontal="true"
                android:background="@drawable/bg_round_corner_fill_green"
                android:elevation="4dp"
                android:paddingLeft="@dimen/normal_button_padding_left_right"
                android:paddingRight="@dimen/normal_button_padding_left_right"
                android:text="@string/verfiy"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="@dimen/sp13" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <Button
                android:id="@+id/cancelBtn"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/normal_button_height"
                android:layout_centerHorizontal="true"
                android:background="@drawable/bg_round_corner_fill_red"
                android:elevation="4dp"
                android:paddingLeft="@dimen/normal_button_padding_left_right"
                android:paddingRight="@dimen/normal_button_padding_left_right"
                android:text="@string/cancel"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="@dimen/sp13" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
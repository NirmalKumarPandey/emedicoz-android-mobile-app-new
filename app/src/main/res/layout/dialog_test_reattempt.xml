<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/dialogTestName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp5"
        android:text="Mini Grand Test-1"
        android:textAlignment="center"
        android:textColor="@color/blue"
        android:textSize="@dimen/sp15"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp1"
        android:background="@color/greayrefcode_dark" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp50"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.35"
            android:paddingTop="@dimen/dp10"
            android:text="S.N."
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="@dimen/sp15"
            android:textStyle="bold" />

        <View
            android:layout_width="@dimen/dp1"
            android:layout_height="match_parent"
            android:background="@color/greayrefcode_dark" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.6"
            android:paddingTop="@dimen/dp10"
            android:text="Date"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="@dimen/sp15"
            android:textStyle="bold" />

        <View
            android:layout_width="@dimen/dp1"
            android:layout_height="match_parent"
            android:background="@color/greayrefcode_dark" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.35"
            android:paddingTop="@dimen/dp10"
            android:text="Time"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="@dimen/sp15"
            android:textStyle="bold" />

        <View
            android:layout_width="@dimen/dp1"
            android:layout_height="match_parent"
            android:background="@color/greayrefcode_dark" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/dp5"
            android:layout_marginEnd="@dimen/dp5"
            android:layout_weight="0.7"
            android:paddingTop="@dimen/dp10"
            android:text="Result Detail"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="@dimen/sp15"
            android:textStyle="bold" />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp1"
        android:background="@color/greayrefcode_dark" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/reattemptDialogRV"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp200"
        android:minHeight="@dimen/dp100"></androidx.recyclerview.widget.RecyclerView>

    <Button
        android:id="@+id/continueReattempt"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp50"
        android:background="@color/blue"
        android:text="Continue"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="@dimen/sp16" />

</LinearLayout>
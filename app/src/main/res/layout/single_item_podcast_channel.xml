<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp56"
    app:cardCornerRadius="@dimen/dp5"
    android:id="@+id/mainChannelCV"
    android:layout_marginStart="@dimen/dp10"
    android:layout_marginEnd="@dimen/dp10"
    android:layout_marginTop="@dimen/dp5"
    android:layout_marginBottom="@dimen/dp3">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.emedicoz.app.ui.views.RoundedImageView
            android:id="@+id/creatorIV"
            android:layout_width="@dimen/dp45"
            android:layout_height="@dimen/dp45"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp10"
            android:padding="@dimen/dp5"
            android:src="@drawable/score" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toStartOf="@id/backIV"
            android:layout_toEndOf="@id/creatorIV"
            android:layout_marginEnd="@dimen/dp10"
            android:orientation="vertical">

            <TextView
                android:id="@+id/creatorName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:paddingStart="@dimen/dp10"
                android:paddingTop="@dimen/dp5"
                android:paddingBottom="@dimen/dp5"
                android:paddingEnd="@dimen/dp5"
                android:text="Podcast By : Sumer Sethi"
                android:textSize="@dimen/dimen_16sp"/>
            <!-- android:textStyle="bold"-->

            <TextView
                android:id="@+id/podcastCountTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:text="Podcast:15"
                android:paddingStart="@dimen/dp10"
                android:paddingBottom="@dimen/dp5"
                android:textSize="@dimen/sp12" />
            <!-- android:textStyle="bold"-->

        </LinearLayout>

        <ImageView
            android:id="@+id/backIV"
            android:layout_width="@dimen/dp20"
            android:layout_height="@dimen/dp20"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:rotation="180"
            android:layout_marginEnd="@dimen/dp10"
            android:src="@mipmap/back_arrow" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>
<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp5"
    app:cardCornerRadius="@dimen/dp4"
    app:cardElevation="@dimen/dp4">

    <LinearLayout
        android:id="@+id/llAdapter1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp4"
        android:clickable="false"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/llmain"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp35"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:minHeight="@dimen/dp50"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="@dimen/dp5"
                    android:text="Item Title"
                    android:textColor="@color/grey_80"
                    android:textSize="@dimen/sp13" />


            </LinearLayout>


            <LinearLayout
                android:id="@+id/llmain1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/bg_mtf_unselected"
                android:gravity="center_vertical"
                android:minHeight="@dimen/dp50"
                android:orientation="horizontal"
                android:visibility="gone">


                <TextView
                    android:id="@+id/optionIconTV1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp10"
                    android:background="@drawable/circle_unselect"
                    android:gravity="center"
                    android:padding="@dimen/dp5"
                    android:text="A"
                    android:textAllCaps="true"
                    android:textColor="@color/red"
                    android:textSize="@dimen/sp13" />

                <View
                    android:layout_width="@dimen/dp15"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/name1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="@dimen/dp5"
                    android:text="Item Title"
                    android:textColor="@color/grey_80"
                    android:textSize="@dimen/sp13" />

                <View
                    android:layout_width="@dimen/dp15"
                    android:layout_height="wrap_content" />


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/optionIconTV"
                android:layout_width="@dimen/dp30"
                android:layout_height="@dimen/dp30"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp5"
                android:background="@drawable/circle_unselect"
                android:gravity="center"
                android:padding="@dimen/dp5"
                android:text="A"
                android:textAllCaps="true"
                android:textColor="@color/red"
                android:textSize="@dimen/sp13" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/checkRV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp5" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
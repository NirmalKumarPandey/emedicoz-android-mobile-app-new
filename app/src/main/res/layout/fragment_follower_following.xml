<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".feeds.fragment.FollowerFollowingFragment">


    <TextView
        android:id="@+id/error2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:textAlignment="center"
        android:textSize="@dimen/sp18"
        android:textStyle="bold"
        android:visibility="gone" />


    <LinearLayout
        android:id="@+id/noPostLL"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp200"
            android:layout_marginTop="@dimen/dp70"
            android:src="@mipmap/no_post_found" />

        <TextView
            android:id="@+id/error"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/dp40"
            android:text="No Posts Found"
            android:textAlignment="center"
            android:textSize="@dimen/sp22"
            android:textStyle="bold"
            android:visibility="visible" />


        <Button
            android:id="@+id/post_now"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp40"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp30"
            android:background="@drawable/reg_round_blue_bg"
            android:paddingLeft="@dimen/dp50"
            android:paddingRight="@dimen/dp50"
            android:text="Post Now"
            android:textAllCaps="false"
            android:textColor="@color/off_white"
            android:textSize="@dimen/heading_text_size"
            android:visibility="visible" />
    </LinearLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/followerFollowingRV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></androidx.recyclerview.widget.RecyclerView>

</RelativeLayout>
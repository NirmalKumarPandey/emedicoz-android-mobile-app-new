<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/topTestQbank"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/damsDialogTV"
        android:layout_marginStart="@dimen/dp5"
        android:layout_marginTop="@dimen/dp10"
        android:layout_marginEnd="@dimen/dp5"
        android:background="@android:color/transparent"
        android:orientation="horizontal"
        android:visibility="visible">


        <androidx.cardview.widget.CardView
            android:id="@+id/talkingCRS"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp60"
            android:layout_margin="@dimen/dp5"
            android:layout_weight="1"
            app:cardCornerRadius="@dimen/dp4"
            app:cardElevation="@dimen/dp4">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp60">

                <ImageView
                    android:id="@+id/imgCreateCustom"
                    android:layout_width="@dimen/dp20"
                    android:layout_height="@dimen/dp20"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp5"
                    android:scaleType="fitStart"
                    android:src="@mipmap/create_custom" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp10"
                    android:layout_toEndOf="@id/imgCreateCustom"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Talking CRS"
                        android:textColor="@color/blue"
                        android:textSize="@dimen/sp16"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CRS Videos"
                        android:textSize="@dimen/sp13" />

                </LinearLayout>


            </RelativeLayout>

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/eBook"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp60"
            android:layout_margin="@dimen/dp5"
            android:layout_weight="1"
            app:cardCornerRadius="@dimen/dp4"
            app:cardElevation="@dimen/dp4">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp60">

                <ImageView
                    android:id="@+id/imgFlashCard"
                    android:layout_width="@dimen/dp20"
                    android:layout_height="@dimen/dp20"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp10"
                    android:scaleType="fitStart"
                    android:src="@mipmap/flashcard" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp5"
                    android:layout_toEndOf="@id/imgFlashCard"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="EBook"
                        android:textColor="@color/blue"
                        android:textSize="@dimen/sp16"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="EBook Files"
                        android:textSize="@dimen/sp13" />

                </LinearLayout>


            </RelativeLayout>

        </androidx.cardview.widget.CardView>


    </LinearLayout>

    <FrameLayout
        android:id="@+id/container_crs"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>
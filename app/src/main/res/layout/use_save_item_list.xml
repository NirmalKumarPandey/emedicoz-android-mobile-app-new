<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardMaxElevation="@dimen/dp2"
    app:cardCornerRadius="@dimen/dp3"
    android:layout_marginTop="@dimen/dp16">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        tools:ignore="MissingConstraints">
        <RelativeLayout
            android:padding="@dimen/dp8"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="0.7">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    android:id="@+id/crdBigOfferVer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="#fae4fc"
                    app:cardCornerRadius="@dimen/dimen_8dp"
                    app:cardMaxElevation="@dimen/dp4">
                    <ImageView
                        android:id="@+id/imgRedeemItem"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp8"
                        app:srcCompat="@drawable/ic_ultimate_vcourse"/>
                </androidx.cardview.widget.CardView>
            </RelativeLayout>
        </RelativeLayout>
        <RelativeLayout
            android:padding="@dimen/dp8"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1.3">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/txtUltimateCourseItem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp12"
                    android:fontFamily="@font/helvetica_neue_medium"
                    android:text="Ultimate Live Course"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dp14">
                </TextView>
                <androidx.cardview.widget.CardView
                    android:layout_toStartOf="@+id/crdButPointPrice"
                    android:id="@+id/crdPayPointPrice"
                    android:layout_marginEnd="@dimen/dp8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="52dp"
                    app:cardBackgroundColor="#ecf3fb"
                    app:cardCornerRadius="3px">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="1000 PT + Pay 9000"
                        android:textAlignment="center"
                        android:textColor="#8e8e8e"
                        android:textSize="@dimen/dp8"
                        android:layout_marginTop="@dimen/dp5"
                        android:layout_marginBottom="@dimen/dp5"
                        android:layout_marginStart="@dimen/dp11"
                        android:layout_marginEnd="@dimen/dp11">
                    </TextView>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/crdButPointPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="@dimen/dp6"
                    android:layout_marginTop="52dp"
                    app:cardBackgroundColor="@color/toolbar_bg_color"
                    app:cardCornerRadius="3px">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Buy in 1000 PT"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="@dimen/dp10"
                        android:layout_marginStart="@dimen/dp11"
                        android:layout_marginEnd="@dimen/dp10"
                        android:layout_marginTop="@dimen/dp4"
                        android:layout_marginBottom="@dimen/dp3">
                    </TextView>
                </androidx.cardview.widget.CardView>
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>




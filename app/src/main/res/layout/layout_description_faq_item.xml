<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/questionLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp5"
        android:elevation="@dimen/dp3"
        app:cardCornerRadius="@dimen/dp10">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_faq"
            android:padding="@dimen/dp10">

            <TextView
                android:id="@+id/question_position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="20dp"
                android:text="1"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/question"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@+id/image_expanded"
                android:layout_toEndOf="@+id/question_position"
                android:background="@color/faq_white"
                android:text="What type of Certificate i will get after completion of this course ?"
                android:textColor="@color/black" />

            <ImageView
                android:id="@+id/image_expanded"
                android:layout_width="@dimen/dp30"
                android:layout_height="@dimen/dp25"
                android:background="@color/faq_white"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="@dimen/dp5"
                />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>


    <LinearLayout
        android:id="@+id/description_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp10"
        android:background="@color/white"
        android:visibility="gone">

        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp32"
            android:layout_marginEnd="@dimen/dp5"
            android:background="@color/white"
            android:justificationMode="inter_word"
            android:text="Post successful completion of this program you will get an Master of Business Administration (MBA) degree from Denkins Business School, Australia Post Gradution Certificate from IIMT-Ghaziabad  "
            android:textColor="@color/black" />

    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dp10"
    android:layout_marginRight="@dimen/dp10"
    android:layout_marginTop="@dimen/dp5"
    android:layout_marginBottom="@dimen/dp5"
    android:elevation="@dimen/dp3"
    app:cardCornerRadius="@dimen/dp20">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/record_course_list"
        android:paddingTop="@dimen/dp10"
        android:paddingBottom="@dimen/dp10"
        android:paddingStart="@dimen/dp20"
        android:paddingEnd="@dimen/dp10">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imgthumb"
            android:layout_width="@dimen/dp60"
            android:layout_height="@dimen/dp60"
            android:layout_marginEnd="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/image_placeholder"
            android:visibility="visible"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize20Percent" />

       <!-- <ImageView
            android:id="@+id/imgthumb"
            android:layout_width="@dimen/dp75"
            android:layout_height="@dimen/dp75"
            android:scaleType="fitXY"
            android:visibility="gone"
            android:src="@drawable/image_placeholder" />-->

        <TextView
            android:id="@+id/textbookmarkname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp10"
            android:layout_marginRight="@dimen/dp30"
            android:layout_toRightOf="@+id/imgthumb"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:text="Pedodontics "
            android:textColor="@color/black"
            android:textSize="@dimen/sp12" />

        <ImageView
            android:layout_width="@dimen/dp30"
            android:layout_height="@dimen/dp30"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp10"
            android:src="@drawable/ic_chevron_right_black_24dp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>
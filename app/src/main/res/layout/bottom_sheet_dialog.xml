<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="134dp"
        android:layout_height="@dimen/dp75"
        android:layout_marginTop="@dimen/dp16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/exit_icon" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp18"
        android:layout_marginEnd="@dimen/dp18"
        android:padding="@dimen/dp5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_path_1978" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp16"
        android:fontFamily="@font/roboto_medium"
        android:text="Do you really want to exit?"
        android:textColor="@color/black"
        android:textSize="@dimen/dp14"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView6" />

    <View
        android:id="@+id/lineView1"
        android:layout_width="269dp"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/dp12"
        android:background="@color/left_panel_background_item_active_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp12"
        android:fontFamily="@font/roboto_medium"
        android:text="@string/explore"
        android:textSize="@dimen/dp14"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lineView1" />

    <TextView
        android:id="@+id/tvStudy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp62"
        android:layout_marginTop="@dimen/dp16"
        android:drawablePadding="@dimen/dp10"
        android:fontFamily="@font/roboto_regular"
        android:gravity="center"
        android:text="@string/study"
        android:textColor="@color/sky_blue"
        android:textSize="@dimen/dp12"
        app:drawableTopCompat="@drawable/study_icon"
        app:layout_constraintEnd_toStartOf="@+id/tvLiveClass"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <TextView
        android:id="@+id/tvLiveClass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="77dp"
        android:layout_marginTop="@dimen/dp15"
        android:layout_marginEnd="67dp"
        android:drawablePadding="@dimen/dp10"
        android:fontFamily="@font/roboto_regular"
        android:gravity="center"
        android:text="@string/live_classes"
        android:textColor="@color/sky_blue"
        android:textSize="@dimen/dp12"
        app:drawableTopCompat="@drawable/live_cl_icon"
        app:layout_constraintEnd_toStartOf="@+id/tvRecordedCourses"
        app:layout_constraintStart_toEndOf="@+id/tvStudy"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <TextView
        android:id="@+id/tvRecordedCourses"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp15"
        android:layout_marginEnd="52dp"
        android:drawablePadding="@dimen/dp10"
        android:fontFamily="@font/roboto_regular"
        android:gravity="center"
        android:text="@string/recorded_courses"
        android:textColor="@color/sky_blue"
        android:textSize="@dimen/dp12"
        app:drawableTopCompat="@drawable/recorded_co_icon"
        app:layout_constraintBottom_toTopOf="@+id/lineView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvLiveClass"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <View
        android:id="@+id/lineView2"
        android:layout_width="269dp"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/dp7"
        android:background="@color/left_panel_background_item_active_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvRecordedCourses" />

    <Button
        android:id="@+id/btnExit"
        android:layout_width="128dp"
        android:layout_height="@dimen/dp35"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="@dimen/dp24"
        android:background="@drawable/btn_onboarding"
        android:fontFamily="@font/roboto_medium"
        android:scaleType="fitCenter"
        android:text="Exit"
        android:textColor="@color/white"
        android:textSize="@dimen/dp14"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lineView2" />

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="@dimen/dp55"
        android:layout_height="@dimen/dp55"
        android:background="@drawable/bg_circle_fill_white">

        <antonkozyriatskyi.circularprogressindicator.CircularProgressIndicator
            android:id="@+id/circular_progress_dqb_item"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:translationZ="@dimen/dp20"
            app:direction="clockwise"
            app:dotColor="@color/white"
            app:dotWidth="@dimen/dp3"
            app:drawDot="true"
            app:progressBackgroundColor="@color/circular_progress_grey"
            app:progressBackgroundStrokeWidth="@dimen/dp5"
            app:progressStrokeWidth="@dimen/dp5"
            app:textColor="@color/white" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_read_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="@dimen/sp20"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_total_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/circular_progress_grey"
                android:textSize="@dimen/sp14"
                android:textStyle="bold" />

        </LinearLayout>

    </FrameLayout>

    <TextView
        android:id="@+id/tv_dqb_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:gravity="start"
        android:maxLines="1"
        android:textColor="@color/left_panel_header_text_color"
        android:textSize="@dimen/sp10" />

</LinearLayout>
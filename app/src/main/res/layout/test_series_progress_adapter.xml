<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/dp80"
    android:layout_height="@dimen/dp80"
    android:layout_gravity="center"
    android:layout_marginStart="@dimen/dp5"
    android:layout_marginEnd="@dimen/dp5"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_circle_fill_white">

        <antonkozyriatskyi.circularprogressindicator.CircularProgressIndicator
            android:id="@+id/circular_progress_test_item"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:translationZ="@dimen/dp20"
            app:direction="clockwise"
            app:drawDot="false"
            app:progressBackgroundStrokeWidth="@dimen/dp5"
            app:progressStrokeWidth="@dimen/dp5"
            app:textColor="@color/transparent" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/testSeriesNameTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp10"
                android:layout_marginEnd="@dimen/dp10"
                android:gravity="center"
                android:text="Grand Test - 173"
                android:textColor="@color/overlay"
                android:textSize="@dimen/sp10"
                android:textStyle="bold" />

        </LinearLayout>

    </FrameLayout>

</LinearLayout>
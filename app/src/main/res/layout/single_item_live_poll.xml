<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_live_chat_poll_enable">

    <TextView
        android:id="@+id/optionTV"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp35"
        android:textSize="@dimen/sp12"
        android:textColor="@color/sky_blue"
        android:text=""
        android:gravity="center_vertical"
        android:fontFamily="@font/helvetica"
        android:paddingStart="@dimen/dp10"
        android:paddingEnd="@dimen/dp10"
        android:visibility="visible"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp35"
        android:id="@+id/progressRL"
        android:visibility="gone">

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp35"
            android:progress="10"
            android:progressDrawable="@drawable/gradient_progress_not_selected"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true">

            <TextView
                android:id="@+id/optionTV1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@id/percentageTV"
                android:paddingStart="@dimen/dp10"
                android:paddingEnd="@dimen/dp10"
                android:text=""
                android:textColor="@color/black"
                android:fontFamily="@font/helvetica"
                android:textSize="@dimen/sp12"
                android:textStyle="bold"
                android:visibility="visible" />

            <TextView
                android:id="@+id/percentageTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp12"
                android:textColor="@color/black"
                android:layout_alignParentEnd="true"
                android:text=""
                android:paddingStart="@dimen/dp10"
                android:paddingEnd="@dimen/dp5"
                android:fontFamily="@font/helvetica"
                android:textStyle="bold"
                android:layout_marginEnd="@dimen/dp20"
                android:visibility="visible"/>

        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>
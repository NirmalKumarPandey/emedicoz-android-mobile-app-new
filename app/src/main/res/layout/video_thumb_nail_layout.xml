<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ibt_test_tile_RL"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/dp170"
        android:layout_height="wrap_content"

        app:cardCornerRadius="@dimen/dp7"
        app:cardElevation="@dimen/dp3">

        <LinearLayout
            android:id="@+id/subHeaderLL"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:paddingBottom="@dimen/dp3">

            <RelativeLayout
                android:id="@+id/videoplayerRL"
                android:layout_width="@dimen/dp166"
                android:gravity="center"
                android:layout_height="@dimen/dp120">

                <ImageView
                    android:id="@+id/videoImage"
                    android:layout_width="@dimen/dp158"
                    android:layout_height="@dimen/dp110"
                    android:scaleType="fitXY"
                    android:layout_marginLeft="@dimen/dp5"
                    android:src="@drawable/app_icon_small" />

                <ImageView
                    android:id="@+id/liveIV"
                    android:layout_width="@dimen/dp35"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginLeft="@dimen/dp2"
                    android:layout_marginTop="@dimen/dp2"
                    android:src="@mipmap/live"
                    android:visibility="gone" />
                <!--  <TextView
                      android:id="@+id/liveIV"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:paddingLeft="@dimen/dp8"
                      android:paddingRight="@dimen/dp8"
                      android:paddingBottom="@dimen/dp2"
                      android:paddingTop="@dimen/dp2"
                      android:scaleType="fitXY"
                      android:layout_marginTop="@dimen/dp3"
                      android:textColor="@color/white"
                      android:background="@drawable/live_btn_design"
                      android:layout_alignParentRight="true"
                      android:layout_marginRight="@dimen/dp5"
                      android:text="Live Now"
                      />-->

            </RelativeLayout>

            <LinearLayout
                android:layout_width="@dimen/dp166"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/titleTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp3"
                    android:ellipsize="end"
                    android:gravity="left"
                    android:maxLines="1"
                    android:paddingLeft="@dimen/dp5"
                    android:paddingTop="@dimen/dp5"
                    android:paddingBottom="@dimen/dp5"
                    android:paddingRight="@dimen/dp1"
                    android:text="Title of Video"
                    android:textSize="@dimen/sp13"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/priceTV"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/dp2"
                    android:layout_weight="1"
                    android:gravity="left|bottom"
                    android:includeFontPadding="false"
                    android:maxLines="1"
                    android:paddingLeft="@dimen/dp5"
                    android:paddingRight="@dimen/dp1"
                    android:visibility="gone"
                    android:text="Rs. 499000"
                    android:textColor="@color/blue"
                    android:textSize="@dimen/post_text_size" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <include
        android:id="@+id/coin_header"
        layout="@layout/coin_header"/>
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/coin_header"
        tools:ignore="MissingConstraints">
        <LinearLayout
            android:layout_marginStart="@dimen/dp16"
            android:layout_marginEnd="@dimen/dp16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <include layout="@layout/checkout_view_layout"
                android:id="@+id/lytRecyclerCheckoutView">
            </include>
            <RelativeLayout
                android:layout_marginTop="@dimen/dp16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_transparent_view_grey_corner">

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp8"
                    android:layout_marginEnd="187dp"
                    android:fontFamily="@font/helvetica_neue_medium"
                    android:hint="Enter coupon / referral code"
                    android:text=""
                    android:textColor="@color/black"
                    android:textColorHint="#8e8e8e"
                    android:textSize="@dimen/dp12"
                    android:textStyle="italic">
                </EditText>
                <TextView
                    android:fontFamily="@font/helvetica_neue_medium"
                    android:layout_marginEnd="@dimen/dp7"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:text="APPLY"
                    android:textColor="@color/toolbar_bg_color"
                    android:textSize="@dimen/dp14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </TextView>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/lytCompleteAddressView"
                android:layout_marginTop="@dimen/dp16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_transparent_view_grey_corner">

                <RelativeLayout
                    android:id="@+id/lytAddressText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp8"
                        android:layout_marginTop="@dimen/dp11"
                        android:fontFamily="@font/helvetica_neue_medium"
                        android:text="Select Your Address"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dp12">

                    </TextView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="@dimen/dp13"
                        android:layout_marginEnd="@dimen/dp7"
                        android:fontFamily="@font/helvetica_neue_medium"
                        android:text="Add / Change Address"
                        android:textColor="@color/toolbar_bg_color"
                        android:textSize="@dimen/dp12">
                    </TextView>
                </RelativeLayout>
                <LinearLayout
                    android:layout_marginBottom="@dimen/dp22"
                    android:layout_marginEnd="@dimen/dp8"
                    android:layout_marginStart="@dimen/dp8"
                    android:layout_below="@+id/lytAddressText"
                    android:layout_marginTop="27dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    tools:ignore="MissingConstraints"
                    android:baselineAligned="false">
                    <RelativeLayout
                        android:layout_marginEnd="@dimen/dp8"
                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:layout_weight="1">
<!--                        <RelativeLayout
                            android:layout_width="match_parent"
<<<<<<< HEAD
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_capsule_white_bg_blue_corner_four_radious">-->
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <EditText
                                android:id="@+id/edtAddressFill"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/dp12"
                                android:layout_marginTop="@dimen/dp14"
                                android:layout_marginEnd="@dimen/dp16"
                                android:background="@color/white"
                                android:fontFamily="@font/helvetica_neue_medium"
                                android:gravity="top|left"
                                android:hint=" Neeraj Gupta \n House No. 84/7, sector 9 \n Near Office, Raam Nagar \n Delhi, New Delhi 140025 \n Phone : 9729668843"
                                android:lineSpacingExtra="@dimen/dp2"
                                android:lines="5"
                                android:text=""
                                android:inputType="textMultiLine"
                                android:textColor="@color/black"
                                android:textColorHint="@color/black"
                                android:textSize="@dimen/dp10">
                            </EditText>
                            <androidx.cardview.widget.CardView
                                android:id="@+id/crdSubmitDefault"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/edtAddressFill"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="@dimen/dp22"
                                android:layout_marginBottom="@dimen/dp14"
                                app:cardBackgroundColor="@color/toolbar_bg_color"
                                app:cardCornerRadius="4px">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/dp12"
                                    android:layout_marginTop="@dimen/dp3"
                                    android:layout_marginEnd="@dimen/dp10"
                                    android:layout_marginBottom="@dimen/dp4"
                                    android:fontFamily="@font/helvetica_neue_medium"
                                    android:text="Default"
                                    android:textAlignment="center"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/dp8">
                                </TextView>
                            </androidx.cardview.widget.CardView>
                        </RelativeLayout>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_marginStart="@dimen/dp8"
                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        tools:ignore="RtlSymmetry">
                        <androidx.cardview.widget.CardView
                            android:id="@+id/crdAddressView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="4px"
                            app:cardMaxElevation="@dimen/dp1"
                            app:cardUseCompatPadding="true">
                            <TextView
                                android:id="@+id/txtAddressFill"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/dp12"
                                android:layout_marginTop="@dimen/dp14"
                                android:layout_marginEnd="@dimen/dp16"
                                android:layout_marginBottom="52dp"
                                android:background="@color/white"
                                android:fontFamily="@font/helvetica_neue_medium"
                                android:gravity="top|left"
                                android:hint=" Neeraj Gupta \n House No. 84/7, sector 9 \n Near Office, Raam Nagar \n Delhi, New Delhi 140025 \n Phone : 9729668843"
                                android:lineSpacingExtra="@dimen/dp1"
                                android:lines="5"
                                android:text=""
                                android:textColor="@color/black"
                                android:textSize="@dimen/dp10">

                            </TextView>
                        </androidx.cardview.widget.CardView>
                    </RelativeLayout>
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:background="@drawable/bg_transparent_view_grey_corner"
                android:layout_marginTop="@dimen/dp16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <!--<ImageView
                    android:layout_marginStart="@dimen/dp8"
                    android:layout_marginTop="@dimen/dp10"
                    android:id="@+id/imgPayCoin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </ImageView>-->
                <ImageView
                    android:layout_marginStart="@dimen/dp8"
                    android:layout_marginTop="@dimen/dp10"
                    android:id="@+id/imgPayCoin"
                    app:srcCompat="@drawable/icon_checkout_coin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </ImageView>
                <TextView
                    android:id="@+id/txtPayUsing"
                    android:layout_marginStart="@dimen/dp4"
                    android:layout_toEndOf="@+id/imgPayCoin"
                    android:layout_marginTop="@dimen/dp10"
                    android:fontFamily="@font/helvetica_neue_medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pay Using Points"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dp12">
                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtPayUsing"
                    android:layout_marginStart="@dimen/dp4"
                    android:layout_marginTop="@dimen/dp4"
                    android:layout_marginBottom="@dimen/dp11"
                    android:layout_toEndOf="@+id/imgPayCoin"
                    android:fontFamily="@font/helvetica_neue_medium"
                    android:text="Balance Coins 2000"
                    android:textAlignment="center"
                    android:textColor="@color/toolbar_bg_color"
                    android:textSize="@dimen/dp12">
                </TextView>
                <Switch
                    android:layout_marginTop="@dimen/dp10"
                    android:layout_marginEnd="@dimen/dp8"
                    android:layout_alignParentEnd="true"
                    android:id="@+id/switch1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:textOff="OFF"
                    android:textOn="ON"
                    tools:ignore="UseSwitchCompatOrMaterialXml">
                </Switch>
            </RelativeLayout>
            <TextView
                android:layout_marginTop="@dimen/dp16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/helvetica_neue_medium"
                android:text="Price Details"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="@dimen/dp14">
            </TextView>
            <View
                android:background="#f1f1f1"
                android:layout_marginTop="@dimen/dp16"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp2">
            </View>
            <LinearLayout
                android:layout_marginTop="@dimen/dp16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                tools:ignore="MissingConstraints">
                <RelativeLayout
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="1">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/txtNumberCourse"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/helvetica_neue_medium"
                            android:text="No. of Course(s)"
                            android:textColor="@color/black"
                            android:textSize="@dimen/dp12">
                        </TextView>

                        <TextView
                            android:id="@+id/txtAmountCourse"
                            android:layout_marginTop="@dimen/dp16"
                            android:layout_below="@+id/txtNumberCourse"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/helvetica_neue_medium"
                            android:text="Course Amount"
                            android:textColor="@color/black"
                            android:textSize="@dimen/dp12">
                        </TextView>
                        <TextView
                            android:layout_marginTop="@dimen/dp16"
                            android:layout_below="@+id/txtAmountCourse"
                            android:id="@+id/txtGst"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/helvetica_neue_medium"
                            android:text="GST (18%)"
                            android:textColor="@color/black"
                            android:textSize="@dimen/dp12">
                        </TextView>

                        <TextView
                            android:layout_marginTop="@dimen/dp16"
                            android:layout_below="@+id/txtGst"
                            android:id="@+id/txtAmountTotal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/helvetica_neue_medium"
                            android:text="Total"
                            android:textColor="@color/black"
                            android:textSize="@dimen/dp12">
                        </TextView>
                    </RelativeLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="1">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_alignParentEnd="true"
                            android:id="@+id/txtNumberCourseQuantity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/helvetica_neue_medium"
                            android:text="2"
                            android:textColor="@color/black"
                            android:textSize="@dimen/dp12">
                        </TextView>

                        <TextView
                            android:layout_alignParentEnd="true"
                            android:id="@+id/txtAmountCourseMoney"
                            android:layout_marginTop="@dimen/dp16"
                            android:layout_below="@+id/txtNumberCourseQuantity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/helvetica_neue_medium"
                            android:text="15000 INT"
                            android:textColor="@color/black"
                            android:textSize="@dimen/dp12">
                        </TextView>
                        <TextView
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="@dimen/dp16"
                            android:layout_below="@+id/txtAmountCourseMoney"
                            android:id="@+id/txtGstAmount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/helvetica_neue_medium"
                            android:text="2700 INR"
                            android:textColor="@color/black"
                            android:textSize="@dimen/dp12">
                        </TextView>
                        <TextView
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="@dimen/dp16"
                            android:layout_below="@+id/txtGstAmount"
                            android:id="@+id/txtAmountTotalPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/helvetica_neue_medium"
                            android:text="17000 INR"
                            android:textColor="@color/black"
                            android:textSize="@dimen/dp12">
                        </TextView>
                    </RelativeLayout>
                </RelativeLayout>
            </LinearLayout>


            <View
                android:background="#f1f1f1"
                android:layout_marginTop="@dimen/dp16"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp2">
            </View>
            <RelativeLayout
                android:layout_marginTop="@dimen/dp16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/txtGrandTotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/helvetica_neue_medium"
                    android:text="Grand Total"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dp13">
                </TextView>
                <TextView
                    android:layout_marginEnd="@dimen/dp4"
                    android:layout_alignParentEnd="true"
                    android:id="@+id/txtGrandTotalPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/helvetica_neue_medium"
                    android:text="17000 INR"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dp13">
                </TextView>
            </RelativeLayout>


            <View
                android:background="#f1f1f1"
                android:layout_marginTop="@dimen/dp16"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp2">
            </View>

            <RelativeLayout
                android:layout_marginBottom="@dimen/dp18"
                android:layout_marginTop="@dimen/dp17"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/txtSaveMoney"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/helvetica_neue_medium"
                    android:text="You Save 20% on this Purcahses"
                    android:textAlignment="center"
                    android:textColor="#388e3c"
                    android:textSize="@dimen/dp12">
                </TextView>
                <ImageView
                    android:layout_marginEnd="@dimen/dp4"
                    android:layout_toStartOf="@+id/txtEarnCoin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </ImageView>
<!--                <ImageView
                    android:layout_marginEnd="@dimen/dp4"
                    android:layout_toStartOf="@+id/txtEarnCoin"
                    app:srcCompat="@drawable/coin_earned"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </ImageView>-->

                <TextView
                    android:layout_marginTop="@dimen/dp1"
                    android:id="@+id/txtEarnCoin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:fontFamily="@font/helvetica_neue_medium"
                    android:text="Coins earned 1000"
                    android:layout_centerVertical="true"
                    android:textColor="#f0aa00"
                    android:textSize="@dimen/dp12">
                </TextView>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        tools:context=".courses.fragment.ViewAnalysis">


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp15"
            app:cardCornerRadius="@dimen/dp4"
            app:cardElevation="@dimen/dp4">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp5">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp5"
                    android:layout_weight="1"
                    android:background="@drawable/bg_signup_btn"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/myScoreTV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="123456"
                        android:textAlignment="center"
                        android:textColor="@color/left_panel_header_text_color"
                        android:textSize="@dimen/sp20"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/totalScoreTVOne"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Questions"
                        android:textSize="@dimen/sp13"
                        android:textAlignment="center"
                        android:textColor="@color/left_panel_header_text_color" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/dp5"
                        android:background="@drawable/score_bg"
                        android:text="My Score"
                        android:textAlignment="center"
                        android:textColor="@color/blue"
                        android:textSize="@dimen/sp13"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp5"
                    android:layout_weight="1"
                    android:background="@drawable/bg_signup_btn"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/toppersScoreTV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="123456"
                        android:textAlignment="center"
                        android:textColor="@color/left_panel_header_text_color"
                        android:textSize="@dimen/sp20"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/totalScoreTVTwo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Questions"
                        android:textSize="@dimen/sp13"
                        android:textAlignment="center"
                        android:textColor="@color/left_panel_header_text_color" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/dp5"
                        android:background="@drawable/score_bg"
                        android:text="Topper's Score"
                        android:textAlignment="center"
                        android:textColor="@color/blue"
                        android:textSize="@dimen/sp13"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp5"
                    android:layout_weight="1"
                    android:background="@drawable/bg_signup_btn"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/averageScoreTV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="123456"
                        android:textAlignment="center"
                        android:textColor="@color/left_panel_header_text_color"
                        android:textSize="@dimen/sp20"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/totalScoreTVThree"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Questions"
                        android:textSize="@dimen/sp13"
                        android:textAlignment="center"
                        android:textColor="@color/left_panel_header_text_color" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/dp5"
                        android:background="@drawable/score_bg"
                        android:text="Average Score"
                        android:textAlignment="center"
                        android:textColor="@color/blue"
                        android:textSize="@dimen/sp13"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardPart"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp40"
            android:layout_margin="@dimen/dp15"
            android:visibility="gone"
            app:cardCornerRadius="@dimen/dp30"
            app:cardElevation="@dimen/dp4">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp40">


                <TextView
                    android:id="@+id/allTV"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/bg_btn"
                    android:gravity="center"
                    android:padding="@dimen/dp5"
                    android:text="@string/all"
                    android:textAlignment="center"
                    android:textColor="@color/left_panel_header_text_color"
                    android:textSize="@dimen/sp16" />

                <TextView
                    android:id="@+id/partATV"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="@dimen/dp5"
                    android:text="Part A"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp16" />

                <TextView
                    android:id="@+id/partBTV"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="@dimen/dp5"
                    android:text="Part B"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp16" />

                <TextView
                    android:id="@+id/partCTV"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="@dimen/dp5"
                    android:text="Part C"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp16" />

            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/subjectLL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/subCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp15"
                android:layout_marginTop="@dimen/dp3"
                android:layout_marginEnd="@dimen/dp15"
                android:layout_marginBottom="@dimen/dp5"
                app:cardBackgroundColor="@color/blue"
                app:cardCornerRadius="@dimen/dp4"
                app:cardElevation="@dimen/dp4">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp30"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="0.7"
                            android:text="Subject"
                            android:textAlignment="center"
                            android:textColor="@color/left_panel_header_text_color"
                            android:textSize="@dimen/sp11" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="0.7">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginStart="@dimen/dp5"
                                android:layout_weight="0.5"
                                android:text="Time"
                                android:textAlignment="center"
                                android:textColor="@color/left_panel_header_text_color"
                                android:textSize="@dimen/sp11" />


                        </LinearLayout>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="0.6"
                            android:text="Right/Total Q"
                            android:textAlignment="center"
                            android:textColor="@color/left_panel_header_text_color"
                            android:textSize="@dimen/sp11" />


                        <LinearLayout
                            android:id="@+id/showMore"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="0.5"
                            android:orientation="horizontal"
                            android:visibility="visible">


                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="0.9"
                                android:text="Score/Total"
                                android:textAlignment="center"
                                android:textColor="@color/left_panel_header_text_color"
                                android:textSize="@dimen/sp11" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="0.6"
                            android:text="Percentage"
                            android:textAlignment="center"
                            android:textColor="@color/left_panel_header_text_color"
                            android:textSize="@dimen/sp11" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <com.emedicoz.app.customviews.NonScrollRecyclerView
                android:id="@+id/subjectRV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp5" />

            <LinearLayout
                android:id="@+id/percentageLL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp15"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="@dimen/dp20"
                        android:layout_height="@dimen/dp20"
                        android:background="@color/blue" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp5"
                        android:text="My Percentage" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="@dimen/dp20"
                        android:layout_height="@dimen/dp20"
                        android:background="#FF7F50" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp5"
                        android:text="Topper's Percentage" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/compareLL"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp40"
                android:layout_margin="@dimen/dp15"
                android:background="@drawable/bg_btn"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:id="@+id/myResultTV"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/dp2"
                    android:layout_weight="1"
                    android:background="@drawable/bg_grid_list"
                    android:gravity="center"
                    android:text="My Result"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp15" />

                <TextView
                    android:id="@+id/compareWithTopperTV"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/dp2"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Compare With Topper"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp15" />

            </LinearLayout>

        </LinearLayout>

        <com.github.mikephil.charting.charts.HorizontalBarChart
            android:id="@+id/chart"
            android:layout_width="match_parent"
            android:layout_height="1600dp"
            android:visibility="gone" />

    </LinearLayout>
</ScrollView>
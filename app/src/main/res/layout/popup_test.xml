                    android:paddingBottom="@dimen/dp3"
                    android:paddingEnd="@dimen/dp10"
                    android:textSize="@dimen/sp13"/>

                <TextView
                    android:id="@+id/bullet4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

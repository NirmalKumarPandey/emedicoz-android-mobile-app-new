<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lytEarnPointView">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        tools:ignore="MissingConstraints">
        <RelativeLayout
            android:paddingTop="@dimen/dp8"
            android:paddingBottom="@dimen/dp8"
            android:paddingEnd="@dimen/dp8"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_capsule_fill_white_border_blue_corner">
                <ImageView
                    android:id="@+id/imgEarnPointViewLeft"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp17"
                    android:layout_marginTop="@dimen/dp12"
                    android:layout_marginEnd="@dimen/dp17"
                    app:srcCompat="@drawable/ic_ultimate_course" />
                <TextView
                    android:id="@+id/txtEarnPointLiveCourseLeft"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imgEarnPointViewLeft"
                    android:layout_marginStart="@dimen/dp11"
                    android:layout_marginTop="@dimen/dp12"
                    android:layout_marginEnd="@dimen/dp10"
                    android:fontFamily="@font/helvetica_neue_medium"
                    android:gravity="center"
                    android:text="Ultimate Live Course"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dp14">
                </TextView>
                <TextView
                    android:layout_below="@+id/txtEarnPointLiveCourseLeft"
                    android:id="@+id/txtLeftEarnPointView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp4"
                    android:fontFamily="@font/helvetica_neue_medium"
                    android:text="Earn 200 Coins"
                    android:textAlignment="center"
                    android:textColor="@color/toolbar_bg_color"
                    android:textSize="@dimen/dp10">
                </TextView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardEnrollNow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtLeftEarnPointView"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="@dimen/dp16"
                    android:layout_marginBottom="@dimen/dp12"
                    app:cardBackgroundColor="@color/toolbar_bg_color"
                    app:cardCornerRadius="4px">

                    <TextView
                        android:id="@+id/tvEnroll"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp18"
                        android:layout_marginTop="@dimen/dp5"
                        android:layout_marginEnd="@dimen/dp17"
                        android:layout_marginBottom="@dimen/dp5"
                        android:text="Enroll Now"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="@dimen/dp10"></TextView>
                </androidx.cardview.widget.CardView>
            </RelativeLayout>
        </RelativeLayout>
        <RelativeLayout
           android:paddingStart="@dimen/dp8"
            android:paddingTop="@dimen/dp8"
            android:paddingBottom="@dimen/dp8"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_capsule_fill_white_border_blue_corner">
                <ImageView
                    android:id="@+id/imgEarnPointViewRight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp17"
                    android:layout_marginTop="@dimen/dp12"
                    android:layout_marginEnd="@dimen/dp17"
                    app:srcCompat="@drawable/ic_ultimate_course" />
                <TextView
                    android:id="@+id/txtEarnPointLiveCourseRight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imgEarnPointViewRight"
                    android:layout_marginStart="@dimen/dp11"
                    android:layout_marginTop="@dimen/dp12"
                    android:layout_marginEnd="@dimen/dp10"
                    android:fontFamily="@font/helvetica_neue_medium"
                    android:gravity="center"
                    android:text="Ultimate Live Course"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dp14">
                </TextView>
                <TextView
                    android:layout_below="@+id/txtEarnPointLiveCourseRight"
                    android:id="@+id/txtRightEarnPointView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp4"
                    android:fontFamily="@font/helvetica_neue_medium"
                    android:text="Earn 200 Coins"
                    android:textAlignment="center"
                    android:textColor="@color/toolbar_bg_color"
                    android:textSize="@dimen/dp10">
                </TextView>
                <androidx.cardview.widget.CardView
                    android:layout_marginTop="@dimen/dp16"
                    android:layout_below="@+id/txtRightEarnPointView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginBottom="@dimen/dp12"
                    app:cardBackgroundColor="@color/toolbar_bg_color"
                    app:cardCornerRadius="4px">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp18"
                        android:layout_marginEnd="@dimen/dp17"
                        android:layout_marginTop="@dimen/dp5"
                        android:layout_marginBottom="@dimen/dp5"
                        android:text="Enroll Now"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="@dimen/dp10">
                    </TextView>
                </androidx.cardview.widget.CardView>
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
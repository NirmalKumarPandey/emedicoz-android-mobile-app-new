<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="@dimen/dp16"
    app:cardMaxElevation="@dimen/dp2"
    app:cardCornerRadius="@dimen/dp3">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        tools:ignore="MissingConstraints">
        <RelativeLayout
            android:padding="@dimen/dp8"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="0.7">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="#fae4fc"
                    app:cardCornerRadius="@dimen/dimen_8dp"
                    app:cardMaxElevation="@dimen/dp4">
                    <ImageView
                        android:id="@+id/imgRedeemItem"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp8"
                        app:srcCompat="@drawable/ic_ultimate_vcourse" />
                </androidx.cardview.widget.CardView>
            </RelativeLayout>
        </RelativeLayout>
        <RelativeLayout
            android:padding="@dimen/dp8"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1.3">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/txtUltimateCourseItem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp12"
                    android:fontFamily="@font/helvetica_neue_medium"
                    android:text="Ultimate Live Course"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dp14">
                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtUltimateCourseItem"
                    android:layout_marginStart="@dimen/dp12"
                    android:layout_marginTop="@dimen/dp5"
                    android:fontFamily="@font/helvetica_neue_medium"
                    android:text="Earn 200 Coins"
                    android:textColor="@color/toolbar_bg_color"
                    android:textSize="@dimen/dp10">
                </TextView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/crdRedeemNow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="60dp"
                    android:layout_marginEnd="@dimen/dp6"
                    app:cardBackgroundColor="@color/toolbar_bg_color"
                    app:cardCornerRadius="3px">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp16"
                        android:layout_marginTop="@dimen/dp4"
                        android:layout_marginEnd="@dimen/dp15"
                        android:layout_marginBottom="@dimen/dp4"
                        android:text="Enroll Now"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="@dimen/dp10">
                    </TextView>
                </androidx.cardview.widget.CardView>
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>


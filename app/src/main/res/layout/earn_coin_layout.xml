<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <include
        android:id="@+id/coin_header"
        layout="@layout/coin_header"/>
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/coin_header"
        tools:ignore="MissingConstraints">
        <LinearLayout
            android:layout_marginStart="@dimen/dp16"
            android:layout_marginEnd="@dimen/dp16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:textSize="@dimen/dp14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:fontFamily="@font/helvetica_neue_medium"
                android:padding="2dp"
                android:text="Earn Point"
                android:textColor="@color/black"
                tools:ignore="SpUsage"/>

            <include layout="@layout/earn_point_layout_view"
                android:id="@+id/lytEarnPointView">
            </include>
            <RelativeLayout
                android:id="@+id/lytViewAll"
                android:layout_marginBottom="@dimen/dp16"
                android:background="@drawable/bg_view_white_border_grey"
                android:layout_marginTop="@dimen/dp16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp8"
                    android:fontFamily="@font/helvetica_neue_medium"
                    android:text="@string/viewAll"
                    android:textColor="@color/toolbar_bg_color"
                    android:textSize="@dimen/dp12">
                </TextView>
                <ImageButton
                    android:backgroundTint="@color/white"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    app:srcCompat="@drawable/arrownext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </ImageButton>
            </RelativeLayout>
            <androidx.cardview.widget.CardView
                android:layout_marginTop="@dimen/dp32"
                android:layout_marginBottom="@dimen/dp24"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="4px">
                <ImageView
                    android:scaleType="fitXY"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/videobanner"
                    android:contentDescription="TODO">
                </ImageView>
                <RelativeLayout
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_transparent_view_white_corner">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp10"
                        android:layout_marginTop="@dimen/dp3"
                        android:layout_marginBottom="@dimen/dp3"
                        android:layout_marginEnd="9dp"
                        android:fontFamily="@font/helvetica_neue_medium"
                        android:text="Watch Video"
                        android:textColor="@color/white"
                        android:textSize="@dimen/dp14">
                    </TextView>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <ImageView
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/earnpointimg">
            </ImageView>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
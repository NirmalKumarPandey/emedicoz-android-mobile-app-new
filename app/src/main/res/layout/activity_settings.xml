<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:onClick="onOutsideClick">

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|right"
        android:background="?attr/shadowBackground"
        android:clickable="true"
        android:paddingLeft="@dimen/dialog_padding_sides"
        android:paddingTop="@dimen/dialog_padding_top_bottom"
        android:paddingRight="@dimen/dialog_padding_sides"
        android:paddingBottom="@dimen/dialog_padding_top_bottom">

        <TableRow android:layout_gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/font_size_icons_gap"
                android:text="@string/setting_unpack"
                android:textColor="?android:attr/textColorPrimary"
                android:textSize="@dimen/font_size_text_size" />

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/unpack_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:checked="true" />
        </TableRow>

    </TableLayout>

</FrameLayout>
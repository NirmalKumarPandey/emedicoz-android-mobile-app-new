<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <solid android:color="@color/light_quiz_grey"/>
        </shape>
    </item>

    <item android:id="@android:id/progress"
        >
        <scale android:scaleWidth="100%">
            <shape>
                <corners android:topRightRadius="@dimen/dp30"
                    android:bottomRightRadius="@dimen/dp30"/>
                <gradient
                    android:endColor="#ef5350"
                    android:startColor="#ffebee"
                    />
            </shape>
        </scale>
    </item>
</layer-list>
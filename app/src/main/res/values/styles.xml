<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/blue</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>

        <item name="android:statusBarColor" tools:targetApi="l">@color/colorPrimaryDark</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>

    </style>

    <style name="DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/toolbar_bg_color</item>
    </style>

    <style name="BottomNavigationTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/toolbar_bg_color</item>
        <item name="android:textColorSecondary">@color/black</item>
    </style>


    <style name="PlayerTheme" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/black</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="AppTheme">
        <item name="android:textColorPrimary">@color/header_text_color</item>
        <item name="colorControlNormal">@color/header_text_color</item>
        <item name="android:paddingRight">5dp</item>

    </style>

    <style name="Custom.Searching" parent="AppTheme.AppBarOverlay">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">#60FFFFFF</item>
        <item name="colorControlActivated">@android:color/white</item>
        <item name="colorControlHighlight">@android:color/white</item>
        <item name="android:layout_height">@dimen/dp50</item>
        <item name="android:layout_width">@dimen/dp50</item>
        <item name="android:textColorPrimary">@android:color/white</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/heading_text_size</item>
    </style>

    <style name="DemoButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">40dp</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>

    <!--EpuBear SDK Styles-->

    <style name="TitleText">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="ReaderText">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textSize">@dimen/reader_text_size</item>
    </style>

    <!--
    <style name="TableText">
        <item name="android:textSize">@dimen/log_text_size</item>
    </style>

    <style name="LogTitle" parent="TableText">
        <item name="android:textColor">@color/log_title_color</item>
    </style>

    <style name="LogValue" parent="TableText">
        <item name="android:textColor">@color/log_value_color</item>
    </style>
    -->

    <style name="TransparentActivityStyle" parent="AppTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>

    <style name="MyTabLayout" parent="Base.Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/MyTabTextAppearance</item>
    </style>

    <style name="MyTabTextAppearance" parent="TextAppearance.AppCompat.Button">
        <item name="android:textSize">@dimen/sp12</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="MyCustomTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">@dimen/sp10</item>
    </style>

    <style name="MyCustomTextAppearanceBold" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">@dimen/sp12</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="ButtonRoundCornerBlue" parent="TextAppearance.AppCompat.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp45</item>
        <item name="android:textSize">@dimen/sp15</item>
        <item name="android:background">@drawable/ripple_round_corner_fill_blue</item>
    </style>

    <style name="SmallButtonRoundCornerBlue" parent="TextAppearance.AppCompat.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp30</item>
        <item name="android:textSize">@dimen/sp12</item>
        <item name="android:background">@drawable/ripple_round_corner_fill_blue</item>
    </style>

    <style name="ButtonRectangleBlue" parent="TextAppearance.AppCompat.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/sp15</item>
        <item name="android:background">@drawable/bg_rectangle_fill_blue</item>
    </style>

    <style name="MyDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@color/left_panel_background_color</item>
        <item name="android:textColor">@color/black</item>
        <item name="textColorAlertDialogListItem">@color/black</item>
    </style>

    <style name="DialogAnimationEnterExit">
        <item name="android:windowEnterAnimation">@anim/slide_left</item>
        <item name="android:windowExitAnimation">@anim/slide_right</item>
    </style>

    <style name="DialogAnimationSlideUpDown">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

    <style name="drawerDialogTheme" parent="@android:style/Theme.Dialog">
        <!-- Fill the screen -->
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>

        <!-- No backgrounds, titles or window float -->
        <item name="android:windowBackground">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>

        <!-- Just to prove it's working -->
        <item name="android:background">@color/white</item>
        <item name="android:windowAnimationStyle">@style/DialogAnimationEnterExit</item>
    </style>

    <style name="NewAppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/new_title_bar_color</item>
        <item name="colorPrimaryDark">@color/polls_option_background_default</item>
        <item name="colorAccent">@color/polls_option_background_default</item>
    </style>

    <style name="bottomDialogTheme" parent="@android:style/Theme.Dialog">
        <!-- Fill the screen -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <!-- No backgrounds, titles or window float -->
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <!-- Just to prove it's working -->
        <item name="android:windowAnimationStyle">@style/DialogAnimationSlideUpDown</item>
    </style>

    <style name="PopupOption" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/scale_in</item>
        <item name="android:windowExitAnimation">@anim/scale_out</item>
    </style>

    <style name="PopupOptionReverse" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/scale_rev_in</item>
        <item name="android:windowExitAnimation">@anim/scale_rev_out</item>
    </style>

    <style name="RoundImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20%</item>
    </style>

    <!-- Style for Course header text in the Recorded Course Screen -->
    <style name="CourseHeaderTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lines">2</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- Style for Course Label text in the Recorded Course Screen such as Course Categories and fees type  -->
    <style name="CourseLabelTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">10sp</item>
    </style>


    <!-- Style for Course Label text in the Recorded Course Screen  -->
    <style name="CourseTypeLabelText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">10sp</item>
    </style>


    <!-- Style for Rating text number in the Recorded Course Screen -->
    <style name="RatingCourseTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/background_grey_rating</item>
        <item name="android:padding">@dimen/dp4</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">7sp</item>
        <item name="android:layout_marginBottom">@dimen/dp1</item>
    </style>

    <!-- Style for Enroll Button in Recorded Screen -->
    <style name="RattingRedButtonStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!--Style for Renew button in My Courses Screen-->
    <style name="RenewButtonStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#FFFF4444</item>
        <item name="android:textSize">10sp</item>
        <item name="android:padding">@dimen/dp5</item>
    </style>


    <!-- Style for Show more Button in Course Description Screen -->
    <style name="ShowMoreButtonStyle01">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#03A9F4</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!-- Style for Reviews show more Button in Course Description Screen -->
    <style name="ShowMoreButtonStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/background_show_more_button</item>
        <item name="android:textColor">#03A9F4</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!-- Style for Live Text in Live Course Screen -->
    <style name="RedTextBackground">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:background">@drawable/background_red_view</item>
        <item name="textColor">@color/white</item>
        <item name="textSize">10sp</item>

    </style>


    <!-- Style for Remind Button in Live Course Screen -->
    <style name="GreenButtonStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:background">@drawable/background_green_btn</item>
        <item name="textColor">#FFFFFF</item>
        <item name="textSize">10sp</item>

    </style>

    <!-- Style for Recorder Screen Filter Button such as My Courses, Text Series, QBank -->
    <style name="RecorderScreenFilterStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_marginStart">@dimen/dp3</item>
        <item name="android:layout_marginEnd">@dimen/dp3</item>
        <item name="android:layout_marginTop">@dimen/dp10</item>
        <item name="android:layout_marginBottom">@dimen/dp10</item>
        <item name="android:textSize">12sp</item>
    </style>


    <!-- Style for Recorder Screen Image -->
    <style name="RecordedCoursesShapeAbleImageSize">
        <item name="android:layout_width">@dimen/dp40</item>
        <item name="android:layout_height">@dimen/dp40</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:layout_margin">@dimen/dp5</item>
    </style>

    <!-- Style for Course category TextView -->
    <style name="RecordedCoursesCategoryName">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">13sp</item>
        <item name="android:layout_marginBottom">@dimen/dp2</item>
        <item name="android:layout_marginStart">@dimen/dp10</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
    </style>


    <!-- Style for Course category Link Show All -->
    <style name="RecordedCoursesCategoryLink">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">@dimen/dp2</item>
        <item name="android:layout_marginEnd">@dimen/dp10</item>
        <item name="android:text">See All</item>
    </style>


    <!-- Style for Course Rating Bar -->
    <style name="StyleRatingBar">
        <item name="attributeName">?android:attr/ratingBarStyleSmall</item>
    </style>


    <!-- Style for Tab Text Size -->
    <style name="RecordedCustomTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">10sp</item>
        <item name="textAllCaps">false</item>
    </style>

    <!-- Style for Course Detail Text  -->
    <style name="RecordedCourseDetailText">
        <item name="android:textSize">12sp</item>
    </style>

    <!-- Style for Spinner Review Course Detail Text  -->
    <style name="ReviewSpinner">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="Theme_Dialog" parent="android:Theme.Holo.Dialog">
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize20Percent" parent="">
        <item name="cornerSize">20%</item>
    </style>

    <style name="MyHintStyle" parent="@android:style/TextAppearance">
        <item name="colorControlNormal">@color/colorGray</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorPrimary</item>
    </style>

    <style name="AppRemoveTitle" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    //bottom sheet dialog

    <style name="CustomBottomSheet" parent="Widget.MaterialComponents.BottomSheet">
        <item name="shapeAppearanceOverlay">@style/CustomShapeAppearanceBottomSheetDialog</item>
    </style>

    <style name="CustomShapeAppearanceBottomSheetDialog" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="toolbar_text" parent="@style/Base.TextAppearance.AppCompat.Title">
        <item name="android:textSize">@dimen/dp14</item>
    </style>

    <style name="ProgressBarTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorAccent">@color/color_bdbdbd</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="BaseBottomSheetDialog" />

    <style name="BaseBottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
    </style>

    <style name="BottomSheet" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/shape_rounded_dialog</item>
    </style>

    <style name="RatingBar2" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/gray_8e8e8e</item>
        <item name="colorControlActivated">@color/rating_bar_yellow</item>
    </style>

</resources>
